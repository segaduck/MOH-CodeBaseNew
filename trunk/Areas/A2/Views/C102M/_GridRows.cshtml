@using EECOnline.Areas.A2.Models;
@using EECOnline.Services;
@model C102MFormModel

@if (Model.Grid.ToCount() <= 0)
{
    <tr>
        <td colspan="7" align="center">- 無 -</td>
    </tr>
}
else
{
    for (int i = 0; i < Model.Grid.Count; i++)
    {
        var item = Model.Grid[i];
        @Html.HiddenFor(x => x.Grid[i].apply_no_sub)
        @Html.HiddenFor(x => x.Grid[i].his_type)
        @Html.HiddenFor(x => x.Grid[i].his_type_name)
        @Html.HiddenFor(x => x.Grid[i].ec_dept)
        @Html.HiddenFor(x => x.Grid[i].ec_doctor)
        @Html.HiddenFor(x => x.Grid[i].ec_dateText)
        @Html.HiddenFor(x => x.Grid[i].ec_date)
        <tr>
            <td align="center">@item.apply_no_sub</td>
            <td align="center">@item.user_name</td>
            <td align="center">@item.hospital_name</td>
            <td align="center">@(item.his_type_name)@(item.Get_Api_A1_Remark)</td>
            <td align="center">@item.his_range1_Text ~ @item.his_range2_Text</td>
            <td align="center">@item.createdatetime_Text</td>
            <td align="center">
                <button type="button" class="btn btn-blue" onclick="doUpload('@item.apply_no_sub', '@item.his_type')">上傳檔案</button>
            </td>
        </tr>
    }
}