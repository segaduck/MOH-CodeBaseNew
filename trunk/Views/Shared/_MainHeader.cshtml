                        <li><a href="~/Home/Sitemap">網站導覽</a></li>
                        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                            <i class="fa fa-bars"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="header">
                        <div class="logo">
                            <a href="~/Home/Index"><img src="~/assests/images/logo-main.svg" alt="衛生福利部｜民眾線上申辦電子病歷服務平台"></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="main-nav">
                        <div class="nav-group">
                            <a href="~/Home/Login" class="@Active1">線上申辦</a>
                            <a href="~/Home/Search" class="@Active2">進度查詢</a>
                            <a href="~/Home/News" class="@Active3">最新消息</a>
                            <a href="~/Home/QnA" class="@Active4">常見問題</a>
                        </div>
                    </div>
                </div>
            </div>
