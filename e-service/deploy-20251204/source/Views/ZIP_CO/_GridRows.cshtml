@using ES.Models.Share;
@model ZIP_COFormModel

@if (Model.Grid != null)
{
    for (int i = 0; i < Model.Grid.Count; i++)
    {
        var item = Model.Grid[i];
        <tr>
            <td class="choose">
                <button type="button" class="btn btn-info" onclick="doSelect('@item.CODE','@item.TEXT')">選</button>
            </td>
            <td data-th="郵遞區號">
                <div class="td-long-txt">@item.CODE</div>
            </td>
            <td data-th="郵遞區號名稱">
                <div class="td-long-txt">@item.TEXT</div>
            </td>
            <td data-th="街道名稱">
                <div class="td-long-txt">@item.ROADNM</div>
            </td>
            <td data-th="說明">
                <div class="td-long-txt js-clear-trim">@item.ROUND</div>
            </td>
        </tr>
    }
}

<script type="text/javascript">
    function trim(str) {
        return str.replace(/^\s\s*/, '').replace(/\s\s*$/, '');
    }
    var str = $('.js-clear-trim');
    str.each(function() {
        var _this = $(this);
        var _str = trim(_this.html());
        _this.html(_str);
    });
</script>