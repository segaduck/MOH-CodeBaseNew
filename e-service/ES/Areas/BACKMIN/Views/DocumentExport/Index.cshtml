@model ES.Areas.Admin.Models.DocumentExportModel.DocumentSet
@{
    Layout = "~/Areas/BACKMIN/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "中醫藥司公文匯出";
    ViewBag.FunctionTitle = "中醫藥司公文匯出";
}

<script type="text/javascript">
    function Export(url) {
        location.href = url;
    }
</script>
@using (Html.BeginForm("Save", "DocumentExport", FormMethod.Post, new { ID = "ActionForm" }))
{
    <div class="bread">
        <i class="fas fa-home"></i>首頁 / 案件分文及處理 / @ViewBag.FunctionTitle
    </div>
    <div class="col-sm-12 content">
        <h1 class="main-title"><i class="fas fa-edit"></i>@ViewBag.FunctionTitle</h1>
        <div class="form-blue form-horizontal">
            <div class="form-group">
                <label class="main-label col-sm-2" for="">信件通知設定<br />(多個收件者以【;】分隔)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.mail, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for="">下載目錄</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.path, new { @class = "form-control" })
                </div>
            </div>
            <div class="btnbar">
                <input type="submit" value="儲存設定" class="btn btn-save" />
                <input type="button" class="btn btn-print" onclick="Export('@Url.Action("Export")');" value="公文檔案匯出" />&nbsp;&nbsp;@ViewBag.ApplyCount
            </div>
        </div>
    </div>
}

