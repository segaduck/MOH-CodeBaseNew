@model ES.Areas.Admin.Models.ExportCase1Models
@{
    Layout = "~/Areas/BACKMIN/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "社救司案件匯出";
    ViewBag.FunctionTitle = "社救司案件匯出";
}
<script type="text/javascript">
    $(function () {
         $('#DateS').datepicker();
         $('#DateE').datepicker();
    });
</script>
@using (Html.BeginForm("Case1", "Export", FormMethod.Post, new { id = "ActionForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="bread">
        <i class="fas fa-home"></i><a href="#">首頁</a> / <a href="#">@ViewBag.FunctionTitle</a>
    </div>
    <h1 class="main-title"><i class="fas fa-edit"></i>@ViewBag.FunctionTitle</h1>
    <div class="form-blue form-horizontal">
        <div class="form-group">
            <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.ServiceId)</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.ServiceId, (List<SelectListItem>)ViewBag.List, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.DateS)</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.DateS, String.Format("{0:yyyy/MM/dd}", Model.DateS), new { @class="form-control"})
                @Html.ValidationMessageFor(m => m.DateS)
            </div>
            <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.DateE)</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.DateE, String.Format("{0:yyyy/MM/dd}", Model.DateE), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DateE)
            </div>
        </div>
        <div class="btnbar">
            <input type="submit" value="匯出" class="btn btn-print"/>
        </div>
    </div>
}
