@model ES.Areas.Admin.Models.SiteEditModel
@{
    Layout = "~/Areas/BACKMIN/Views/Shared/_Layout3.cshtml";

    ViewBag.Title = "相關網站連結（新增）";
    ViewBag.FunctionTitle = "相關網站連結 - 新增";
}
@using (Html.BeginForm("New", "Site", FormMethod.Post, new { id = "ActionForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="bread">
        <i class="fas fa-home"></i>首頁 / 前台管理 / @ViewBag.FunctionTitle
    </div>
    <div class="col-sm-12 content">
        <h1 class="main-title"><i class="fas fa-edit"></i>@ViewBag.FunctionTitle</h1>
        <h2 class="second-title">基本資料</h2>
        <div class="form-blue form-horizontal">
            <div class="form-group">
                <label class="main-label col-sm-2" for=""><span class="formRequired">*</span>@Html.DisplayNameFor(m => m.Name)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for=""><span class="formRequired">*</span>@Html.DisplayNameFor(m => m.Url)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Url)
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for=""><span class="formRequired">*</span>@Html.DisplayNameFor(m => m.Seq)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Seq, new { @class = "form-normal" })
                    @Html.ValidationMessageFor(m => m.Seq)
                </div>
            </div>
        </div>
        <div class="btnbar">
            <input type="submit" class="btn btn-save" value="存檔" />
            <input type="reset" class="btn btn-gray" value="重填" />
            <input type="button" class="btn btn-gray" value="返回" onclick="document.location.href='@Url.Action("Index", "Site")';" />
        </div>
    </div>
}
