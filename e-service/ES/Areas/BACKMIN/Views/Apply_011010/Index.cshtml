<script type="text/javascript">

    $(document).ready(function () {
        //debugger;
        $("input[name=RGENDER][value='" + $("#Form_SEX_CD").val() + "']").attr('checked', true);

        var YN = $("#Form_MERGEYN").val();
        $("input[name=MERGEYN][value='" + YN + "']").prop('checked', true);

        $("#StatusDesc").val($('#Form_FLOW_CD option:selected').text());

        if ($('#Form_FLOW_CD option:selected').val() == "0" || $('#Form_FLOW_CD option:selected').val() == "2" || $('#Form_FLOW_CD option:selected').val() == "9") {
            $("#Form_FLOW_CD").attr('disabled', 'disabled');
            $('#btnCaseNo').hide();
            $('#MOHW_CASE_NO').attr("readonly", "readonly");
            $('#btnSave').hide();
        }

        $("#Form_FLOW_CD [value='1']").remove();
        $("#Form_FLOW_CD [value='3']").remove();

        $('input[id^="Chk"]').each(function (item) {
            $(this).css({ "display": "none" })
            $(this).prop("checked", false);
            $(this).attr("disabled", "disabled");
        });
    });

    //
    function changechk() {
        if ($('#Form_FLOW_CD option:selected').val() == '0') {

            $('input[id^="Chk"]').each(function (item) {
                $(this).css({ "display": "none" })
                $(this).prop("checked", false);
            });

            $('div[id^="DIV_"]').each(function (item) {
                $(this).hide();
            });

            $('input[id$="_Note"]').each(function (item) {
                $(this).val('');
            });
        }
        else {
            $('input[id^="Chk"]').each(function (item) {
                $(this).css({ "display": "" })
            });
        }
    }

    // 是否合併檔案
    function RadioChange() {
        $("#MERGEYN").val($('input[name="MERGEYN"]:checked').val());
    }

    function checkfile() {
        var ValArr = new Array();
        $('input[type="checkbox"][id="chkfile"]:checked').each(function (i) {
            ValArr[i] = this.value;
        });
        $('#Form_FileCheck').val(ValArr.join());
    }

    // 送出
    function doSave() {
        var ValStr = "";
        if ($('#Form_FLOW_CD option:selected').val() == "") {
            ValStr += "\n 請選擇案件狀態 !";
        }
        if (ValStr != "") {
            blockAlert(ValStr, "提示訊息");
            return;
        }

        var data = getFormDataToObject($("form[id=main_form]"));
        ajaxLoadMore('@Url.Action("Save")', data, function (retData) {
            $("#Form_IS_PAY_STATUS").prop("disabled", true);
            if (retData.status) {
                blockMessage(retData.message, "提示訊息", function () {
                    location.href = '@Url.Action("Index", "Apply_011010")?appid=' + $('#Form_APP_ID').val();
                });
            }
            else {
                blockAlert(retData.message, "提示訊息");
            }
        });

    }

    // 返回
    function doback() {
        location.href = '@Url.Action("Index", "Case")'
    }

    // 取得ZIP
    function GetZip(APP_ID) {
        var data = { "APP_ID": APP_ID }
        var url = '/GetZIP/GetZIP?' + $.param(data);
        location.href = url;
    }

    // 取公文號
    function GetMOHW_CASE_NO(UNIT_CD) {
        var data = { "UNIT_CD": UNIT_CD }
        ajaxLoadMore('/AJAX/GetMOHW_CASE_NO', data, function (retData) {
            if (retData.status) {
                $('#MOHW_CASE_NO').val(retData.message)
            }
            else {
                blockAlert(retData.message, "提示訊息");
            }
        });
    }

    function changeAddDocCheck() {
        var flowOption = $('#Form_FLOW_CD option:selected').val();
        $('#notice').hide(); //補件項目(附件)
        $('#noticeContent').hide(); //補件內容
        $('#notice_ITEM').hide();
        $('#notice_ITEM2').hide();
        if (flowOption == '2') {
            // 通知補件
            $('#notice').show();
            $('#noticeContent').show();
            $('#notice_ITEM').show();
            $('#notice_ITEM2').show();
        } else if (flowOption == '4') {
            // 補件確認完成
            $('#notice').show();
            $('#noticeContent').show();
            // 紙本項目
            $('#remark').text('備註');
        } else if (flowOption == '5') {
            // 已收紙本，審核中
            $('#notice').show();
            $('#noticeContent').show();
            // 紙本項目
            $('#remark').text('備註');
        }
        $("#StatusDesc").val($('#Form_FLOW_CD option:selected').text());
    }
</script>
