                } else {
                    $("#Form_PAY_ACT_TIME_TW").attr("readonly", "readonly");
                    $("#Form_PAY_ACT_TIME_TW").parent().attr("disabled", "disabled");
                    $('#Form_PAY_ACT_TIME_TW').val("");
                    $('#Form_PAY_ACT_TIME').val("");
                }
            }
            else {
                blockAlert(retData.message, "提示訊息");
            }
        });
    }
