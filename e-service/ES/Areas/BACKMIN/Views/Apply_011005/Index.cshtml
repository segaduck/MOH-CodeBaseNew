<script type="text/javascript">

    $(document).ready(function () {
        var YN = $("#Form_MERGEYN").val();
        $("input[name=MERGEYN][value='" + YN + "']").prop('checked', true);
        $("input[id^=Form_SEX_CD]").each(function () { $(this).prop('disabled', true); })
        $('#C_ZIPCODE').on('blur', doACC_ADDRNameGet); doACC_ADDRNameGet();
        $('#H_ZIPCODE').on('blur', doACC_ADDRNameGet1); doACC_ADDRNameGet1();

        $("#StatusDesc").val($('#Form_FLOW_CD option:selected').text());

        if ($('#Form_FLOW_CD option:selected').val() == "0" || $('#Form_FLOW_CD option:selected').val() == "2") {
            // 當通知補件只有寄送紙本項目時，後台可以自行修改案件狀態
            if ($('#isOnlyNoticePaper').val() != 'Y') {
                $("#Form_FLOW_CD").attr('disabled', 'disabled');
                $('#btnCaseNo').hide();
            }
            $('#MOHW_CASE_NO').attr("readonly", "readonly");
            $('#btnSave').hide();
        }

        $("#Form_FLOW_CD [value='1']").remove();
        $("#Form_FLOW_CD [value='3']").remove();

        $('input[id^="Chk"]').each(function (item) {
            $(this).css({ "display": "none" })
            $(this).prop("checked", false);
            $(this).attr("disabled", "disabled");
        });

    });

    //
    function changechk() {
        if ($('#Form_FLOW_CD option:selected').val() == '0') {

            $('input[id^="Chk"]').each(function (item) {
                $(this).css({ "display": "none" })
                $(this).prop("checked", false);
            });

            $('div[id^="DIV_"]').each(function (item) {
                $(this).hide();
            });

            $('input[id$="_Note"]').each(function (item) {
                $(this).val('');
            });
        }
        else {
            $('input[id^="Chk"]').each(function (item) {
                $(this).css({ "display": "" })
            });
        }
    }

    // 地址
    function loadDialogACC_ADDRCodeMapName(data) {
        ajaxLoadMore(data.url,
            data.arg,
            function (resp) {
                if (resp === undefined) data.box.val('');
                else {
                    if (resp.data != '') data.box.val(resp.data);
                    else {
                        data.box.val('');
                        data.add.val('');
                        blockAlert(data.msg);
                    }
                }
            });
    };
    function loadDialogACC_ADDRCodeMapName1(data) {
        ajaxLoadMore(data.url,
            data.arg,
            function (resp) {
                if (resp === undefined) data.box.val('');
                else {
                    if (resp.data != '') data.box.val(resp.data);
                    else {
                        data.box.val('');
                        data.add.val('');
                        blockAlert(data.msg);
                    }
                }
            });
    };
    function doACC_ADDRSelect() {
        var url = '/ZIP_CO';
        var title = '郵遞區號查詢';
        popupWindow({ 'width': 900 },
            url,
            title,
            null,
            function (retData, doc) {
                if (retData != null) {
                    $('#C_ZIPCODE').val(retData.Id);
                    $('#C_ZIPCODE_TEXT').val(retData.Name);
                }
            });
    }

    function doACC_ADDRNameGet() {
        var code = $('#C_ZIPCODE');
        var data = {
            'url': '/Ajax/GetCityTown',
            'msg': '查無該郵遞區號!!',
            'arg': { 'CODE': code.val().toUpperCase() },
            'box': $('#C_ZIPCODE_TEXT'),
            'add': $('#C_ZIPCODE')
        };
        if ($.trim(data.arg.CODE) == '') data.box.val('');
        else {
            code.val(data.arg.CODE);
            loadDialogACC_ADDRCodeMapName(data);
        }
    }

    function doACC_ADDRSelect1() {
        var url = '/ZIP_CO';
        var title = '郵遞區號查詢';
        popupWindow({ 'width': 900 },
            url,
            title,
            null,
            function (retData, doc) {
                if (retData != null) {
                    $('#H_ZIPCODE').val(retData.Id);
                    $('#H_ZIPCODE_TEXT').val(retData.Name);
                }
            });
    }

    function doACC_ADDRNameGet1() {
        var code = $('#H_ZIPCODE');
        var data = {
            'url': '/Ajax/GetCityTown',
            'msg': '查無該郵遞區號!!',
            'arg': { 'CODE': code.val().toUpperCase() },
            'box': $('#H_ZIPCODE_TEXT'),
            'add': $('#H_ZIPCODE_CODE')
        };
        if ($.trim(data.arg.CODE) == '') data.box.val('');
        else {
            code.val(data.arg.CODE);
            loadDialogACC_ADDRCodeMapName1(data);
        }
    }


    // 是否合併檔案
    function RadioChange() {
        $("#MERGEYN").val($('input[name="MERGEYN"]:checked').val());
    }

    function checkfile() {
        var ValArr = new Array();
        $('input[type="checkbox"][id="chkfile"]:checked').each(function (i) {
            ValArr[i] = this.value;
        });
        $('#Form_FileCheck').val(ValArr.join());
    }

     // 送出
    function doSave() {

        var ValStr = "";
        if ($('#Form_FLOW_CD option:selected').val() =="") {
            blockAlert("請選擇案件狀態 !", "提示訊息");
        }
        else {
            if (ValStr != "") { blockAlert(ValStr, "提示訊息"); }
            else {
                var data = getFormDataToObject($("form[id=main_form]"));
                $("#Form_IS_PAY_STATUS").prop("disabled", false);
                ajaxLoadMore('@Url.Action("Save")', data, function (retData) {
                    $("#Form_IS_PAY_STATUS").prop("disabled", true);
                    if (retData.status) {
                        blockMessage(retData.message, "提示訊息", function () {
                            location.href = '@Url.Action("Index", "Apply_011005")?appid=' + $('#Form_APP_ID').val();
                        });
                    }
                    else {
                        blockAlert(retData.message, "提示訊息");
                    }
                });
            }
        }
    }

    // 返回
    function doback() {
        location.href = '@Url.Action("Index", "Case")'
    }

    // 取得ZIP
    function GetZip(APP_ID) {
        var data = {
            "APP_ID": APP_ID
        }
        var url = '/GetZIP/GetZIP?' + $.param(data);
        location.href = url;
    }

    // 取公文號
    function GetMOHW_CASE_NO(UNIT_CD, APP_ID) {
        //var APP_ID = $('#Form_APP_ID').val();
        var data = {
            "UNIT_CD": UNIT_CD,
            "APP_ID": APP_ID
        }
        ajaxLoadMore('/AJAX/GetMOHW_CASE_NO', data, function (retData) {
            if (retData.status) {
                $('#MOHW_CASE_NO').val(retData.message)
            }
            else {
                blockAlert(retData.message, "提示訊息");
