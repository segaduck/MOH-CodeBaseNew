    function changeAddDocCheck() {
        var flowOption = $('#Form_FLOW_CD option:selected').val();
        if (flowOption == '2') {
            // 通知補件
            $('#notice').show();
            $('#noticeContent').show();
            $('.appfile').show();
            // 戶口名簿
            $('.appfile3').hide();
            $('#remark').text('補件內容');
        } else if (flowOption == '4') {
            // 補件確認完成
            $('#notice').show();
            $('.appfile').show();
            // 備註
            $('#noticeContent').hide();
            // 其他
            $('.appfile4').hide();
            // 戶口名簿
            $('.appfile3').hide();
        }
        else if (flowOption == '5') {
            // 已收紙本，審核中
            $('#notice').show();
            $('.appfile').hide();
            $('#noticeContent').show();
            // 紙本項目
            $('.appfile5').show();
            $('#remark').text('備註');
        }
        else if (flowOption == '9') {
            $('#notice').show();
            $('#notice_ITEM').hide();
            $('#remark').text('備註');
            $('#noticeContent').show();
        }
        else {
            $('#notice').hide();
            $('#noticeContent').hide();
            $('.appfile').hide();
        }
        $("#StatusDesc").val($('#Form_FLOW_CD option:selected').text());
    }

    //已繳費勾選按鈕
    function payCheck(check) {
        if (check.checked) {
            $("#Form_PAY_ACT_TIME_TW").removeAttr("readonly");
            $("#Form_PAY_ACT_TIME_TW").parent().removeAttr("disabled");
        } else {
            $("#Form_PAY_ACT_TIME_TW").attr("readonly", "readonly");
            $("#Form_PAY_ACT_TIME_TW").parent().attr("disabled", "disabled");
            $('#Form_PAY_ACT_TIME_TW').val("");
            $('#Form_PAY_ACT_TIME').val("");
        }
    }
