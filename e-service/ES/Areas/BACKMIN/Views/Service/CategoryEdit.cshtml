@model ES.Areas.Admin.Models.ServiceCategoryModel
@{
    Layout = null;
    ViewBag.FunctionTitle = "修改分類";
    AjaxOptions ajaxOpts = new AjaxOptions
    {
        HttpMethod = "Post",
        OnSuccess = "doCategoryActionSuccess"
    };
}

@using (Ajax.BeginForm("CategoryEdit", "Service", ajaxOpts, new { id = "ActionForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="bread">
        <i class="fas fa-home"></i>首頁 / 紀錄查詢 / @ViewBag.FunctionTitle
    </div>
    <div class="col-sm-12 content">
        <h2 class="second-title">@ViewBag.FunctionTitle</h2>
        <div class="form-blue form-horizontal">
            <div class="form-group">
                <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.Name)</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(m => m.ParentName)@Html.TextBoxFor(m => m.Name, new { @class = "form-normal" })@Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            @if (Model.ParentId == 0)
            {
                <div class="form-group">
                    <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.UnitCode)</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(m => m.UnitCode, (List<SelectListItem>)ViewBag.UnitList, new { @class = "form-normal" })@Html.ValidationMessageFor(m => m.UnitCode)
                    </div>
                </div>
            }
            <div class="form-group">
                <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.Seq)</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Seq, new { @class = "form-normal" })@Html.ValidationMessageFor(m => m.Seq)
                </div>
            </div>
            <div class="btnbar">
                @if (Model.ParentId > 0)
                {
                    @Html.HiddenFor(m => m.UnitCode)
                }
                @Html.HiddenFor(m => m.CategoryId)
                @Html.HiddenFor(m => m.ParentId)
                @Html.HiddenFor(m => m.Level)
                <input type="submit" value="存檔" class="btn btn-save" />
                <input type="reset" value="重填" class="btn btn-gray" />
            </div>
        </div>
    </div>
}
