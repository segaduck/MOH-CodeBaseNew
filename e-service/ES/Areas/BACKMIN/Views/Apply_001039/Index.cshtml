    // 通知補件
    function changeAddDocCheck() {
        // 通知補件
        if ($('#Form_FLOW_CD option:selected').val() == '2') {
            $('#notice').show();
            $('#notice_item').show();
            $('#note_content').show();
            $('#remark').text('補件內容');
            $('#mail_record').hide();
        }
        else if ($('#Form_FLOW_CD option:selected').val() == '9') {
            // 逾期未補件而予結案
            $('#notice').show();
            $('#notice_item').hide();
            $('#note_content').show();
            $('#remark').text('備註');
            $('#mail_record').hide();
        }
        else if ($('#Form_FLOW_CD option:selected').val() == '12') {
            // 核可(發文歸檔)
            $('#mail_record').show();
            $('#notice').hide();
            $('#notice_item').hide();
            $('#note_content').hide();
            $('#remark').text('補件內容');
        }
        else if ($('#Form_FLOW_CD option:selected').val() == '15') {
            // 自請撤銷
            $('#notice').show();
            $('#notice_item').hide();
            $('#note_content').show();
            $('#remark').text('備註');
            $('#mail_record').hide();
        }
        else if ($('#Form_FLOW_CD option:selected').val() == '8') {
            // 退件通知
            $('#notice').show();
            $('#notice_item').hide();
            $('#note_content').show();
            $('#remark').text('備註');
            $('#mail_record').hide();
        }
        else {
            $('#notice').hide();
            $('#notice_item').hide();
            $('#note_content').hide();
            $('#remark').text('補件內容');
            $('#mail_record').hide();
        }

        $("#StatusDesc").val($('#Form_FLOW_CD option:selected').text());

    }
</script>
