            if ($('#Form_MAIL_DATE_AC_TW').val().trim() == '') {
                ValStr += '請輸入郵寄日期!!<br>';
            }
            //if ($('#Form_MAIL_BARCODE').val().trim() == '') {
            //    ValStr += '請輸入掛號條碼!!<br>';
            //}
        }
        // 逾期未補件而予結案
        if ($('#Form_FLOW_CD option:selected').val() == '9') {
            if ($('#Form_NOTE').val().trim() == '') {
                ValStr += '請輸入備註!!</br>';
            }
        }

        if (ValStr != "") { blockAlert(ValStr, "提示訊息"); }
        else {
            var data = getFormDataToObject($("form[id=main_form]"));
            var appID = '@Model.Form.APP_ID';
            ajaxLoadMore('@Url.Action("Save")', data, function (retData) {
                if (retData.status) {
                    blockMessage(retData.message, "提示訊息", function () {
                        blockUI();
                        location.href = '@Url.Action("Index", "Apply_001039")?appid=' + appID;
                    });
                }
                else {
                    blockAlert(retData.message, "提示訊息");
                }
            });

        }

    }

