            data,
            function (retData) {
                if (retData.status) {
                    $('#Form_MOHW_CASE_NO').val("success");
                    blockAlert(retData.message, "提示訊息");
                } else {
                    blockAlert(retData.message, "提示訊息");
                }
            });
    }

    // 取回公文號
    function GetMOHW_Token(APP_ID) {
        var data = {
            "APP_ID": APP_ID
        }
