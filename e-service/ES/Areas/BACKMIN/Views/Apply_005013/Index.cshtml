                            function () {
                                blockUI();
                                var id = $("#Form_APP_ID").val();
                                location.href = "Apply_005013?appid=" + id + "&srvid=005013";
                            });
                    }
                    else {
                        blockAlert(retData.message, "提示訊息");
                    }
                });
        } else {
            blockAlert(ErrMsg, "提示訊息");
        }

    }

