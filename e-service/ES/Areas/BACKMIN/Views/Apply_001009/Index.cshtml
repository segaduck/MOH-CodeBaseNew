@using System.Web.Razor.Parser
@using ES.Services
@using ES.Models
@using ES.Areas.Admin.Models
@model Apply_001009ViewModel
@{
    Layout = "~/Areas/BACKMIN/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "醫事人員或公共衛生師資格英文求證";
    ShareCodeListModel srcList = new ShareCodeListModel();
}

@using (Html.BeginForm("Index", "Apply_001009", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "main_form", @enctype = "multipart/form-data" }))
{
    <div class="bread">
        <i class="fas fa-home"></i>首頁 / 案件分文及處理 / 案件處理 / @ViewBag.Title
    </div>
    <div class="col-sm-12 content">
        <!-- H1 title -->
        <h1 class="main-title"><i class="fas fa-edit"></i>案件審理作業</h1>

        <div class="table-responsive">
            <table width="100%" border="0" cellspacing="0" cellpadding="0"
                   class="table-typeA table">
                <thead>
                    <tr>
                        <th colspan="2">基本資料檔</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td width="20%">
                            <div align="center">申辦項目：</div>
                        </td>
                        <td width="80%">
                            <div align="left">@ViewBag.Title</div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div align="center">申辦日期：</div>
                        </td>
                        <td>@Model.APPLY_DATE</td>
                    </tr>
                    <tr>
                        <td><div align="center">預計完成日：</div></td>
                        <td>@Model.APP_EXT_DATE</td>
                    </tr>
                    <tr>
                        <td><div align="center">案件承辦人姓名：</div></td>
                        <td>@Model.Admin.NAME</td>
                    </tr>
                    <tr>
                        <td>
                            <div align="center">案件編號：</div>
                        </td>
                        <td>@Model.APP_ID</td>
                    </tr>
                    <tr>
                        <td>
                            <div align="center">系統狀態：</div>
                        </td>
                        <td>@Model.APP_STATUS</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!--1-->
        <div class='panel panel-info'>
            <div class='panel-heading'>
                <h2 class='panel-title' data-toggle='collapse' data-parent='#basicData'
                    href='#basicData'>
                    <a>基本資料檔(點擊展開)</a>
                </h2>
            </div>
            <div id='basicData' class='panel-collapse collapse'>
                <div class='panel-body'>
                    <div class="form-blue">
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">申請人中文姓名(與護照相同)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(x => x.Apply.NAME, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <label class="main-label col-sm-2" for="">身分證編號/居留證號</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(x => x.Apply.IDN, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">申請人英文姓名(與護照相同)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(x => x.Apply.ENAME, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">申請人英文別名(與護照相同)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(x => x.Apply.E_ALIAS_NAME, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">申請人出生年月日</label>
                            <div class="col-sm-4">
                                @Html.DatePickerTWFor(x => x.BIRTHDAY_AC, new { size = "10", @readonly = "readonly", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">申請事由</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.APPLY_CAUSE, new List<SelectListItem>(){
                                                                                              new SelectListItem(){ Text="任職-機構",Value="1"},
                                                                                              new SelectListItem(){ Text="其他",Value="2"}
                                                                                            }, new { @class = "form-normal", @disabled = "disabled" })
                                @Html.TextBoxFor(x => x.APPLY_CAUSE_TEXT, new { @class = "form-normal", @placeholder = "申請事由", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">申請證明類別</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.APPLY_CERT_CATE, srcList.GetCERTCATEList, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">醫事人員或公共衛生師證書字號</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.LIC_CD, srcList.GetCERTCATEMDByPCDList, new { @class = "form-normal", @disabled = "disabled" })字
                                @Html.TextBoxFor(x => x.LIC_NUM, new { @class = "form-normal", @readonly = "readonly" })號
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">醫事人員或公共衛生師證書日期</label>
                            <div class="col-sm-4">
                                @Html.DatePickerTWFor(x => x.CERT_APPROVED_DATE_AC, new { size = "10", @readonly = "readonly", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">畢業學校名稱及所在縣市中文</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.C_SCHOOL_NAME, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">畢業學校名稱及所在縣市英文</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.E_SCHOOL_NAME, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">修業年限</label>
                            <div class="col-sm-10">
                                <div class="form-control-static">
                                    西元 @Model.STUDY_START_YM.Substring(0, 4) 年 @Model.STUDY_START_YM.Substring(4, 2) 月
                                    至 西元 @Model.STUDY_END_YM.Substring(0, 4) 年 @Model.STUDY_END_YM.Substring(4, 2) 月
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">通訊地址</label>
                            <div class="col-sm-10 form-inline">
                                @Html.TextBoxFor(x => x.CITY_CODE, new { @id = "CITY_CODE", @class = "form-10 form-normal", size = 10, placeholder = "郵遞區號", @readonly = "readonly" })
                                <div class="input-group">
                                    @Html.TextBoxFor(x => x.CITY_TEXT, new { @id = "CITY_TEXT", @class = "form-normal", size = 20, placeholder = "郵遞區號名稱", @readonly = "readonly" })
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-info" onclick="doCITYSelect()"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </span>
                                </div>
                                @Html.TextBoxFor(x => x.CITY_DETAIL, new { @class = "form-normal", placeholder = "請輸入地址 ", size = 59, maxlength = "64", @readonly = "readonly" })
                                @Html.HiddenFor(x => x.FULL_ADDRESS)

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">本求證表郵寄機構地址(含國別及收件者)</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.VERIFY_ADDRESS, new { @class = "form-control", @readonly = "readonly" })
                                @Html.DropDownListFor(x => x.MAIL_COUNTRY, srcList.CountryList, new { @class = "form-normal", @disabled = "disabled" })
                                @Html.TextBoxFor(x => x.RECEIVER, new { @class = "form-normal", placeholder = "請輸入收件者", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">機構名稱</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.VERIFY_NAME, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class='form-group'>
                            <label class='main-label col-sm-2'>聯絡人姓名</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Apply.CNT_NAME, new { @class = "form-normal", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class='form-group'>
                            <label class='main-label col-sm-2' for=''>聯絡人電話</label>
                            <div class="col-sm-10">
                                @Html.HiddenFor(x => x.TEL)
                                <span></span>
                                @Html.TextBoxFor(x => x.TEL_SEC, new { @class = "form-10 form-normal", @readonly = "readonly" })
                                <span>-</span>
                                @Html.TextBoxFor(x => x.TEL_NO, new { @class = "form-normal", @readonly = "readonly" })
                                <span>#</span>
                                @Html.TextBoxFor(x => x.TEL_EXT, new { @class = "form-10 form-normal", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">聯絡人行動電話</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Apply.MOBILE, new { @class = "form-normal", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">聯絡人E-MAIL</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class='form-group'>
                            <label class='main-label col-sm-2' for=''>聯絡人傳真</label>
                            <div class="col-sm-10">
                                @Html.HiddenFor(x => x.FAX)
                                <span></span>
                                @Html.TextBoxFor(x => x.FAX_SEC, new { @class = "form-10 form-normal", @readonly = "readonly" })
                                <span>-</span>
                                @Html.TextBoxFor(x => x.FAX_NO, new { @class = "form-normal", @readonly = "readonly" })
                                <span>#</span>
                                @Html.TextBoxFor(x => x.FAX_EXT, new { @class = "form-10 form-normal", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--2-->
        <div class='panel panel-info'>
            <div class='panel-heading'>
                <h2 class='panel-title' data-toggle='collapse' data-parent='#ApplyData' href='#ApplyData'>
                    <a>上傳應附檔案(點擊展開)</a>
                </h2>
            </div>
            <div id='ApplyData' class='panel-collapse collapse'>
                <div class='panel-body'>
                    <div class="form-blue">

                        <div class='form-group'>
                            <label class="step-label col-sm-2" for="">佐證文件採合併檔案</label>
                            <div class="col-sm-10">
                                <label class="radio-inline "><input type="radio" id="chkFileY" name="optFile" value="Y" disabled>是</label>
                                <label class="radio-inline "><input type="radio" id="chkFileN" name="optFile" value="N" disabled>否</label>
                                @Html.HiddenFor(x => x.IS_MERGE_FILE)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="step-label col-sm-2" for="">護照影本</label>
                            <div class="col-sm-10">
                                @if (Model.FILE1_CHECK == "Y")
                                {
                                    @Html.FileDLForTurbo(x => x.FileList[0].FILENAME, Model.FileList[0].FILENAME + "," + Model.FileList[0].APP_ID + "," + Model.FileList[0].FILE_NO + "," + Model.FileList[0].SRC_NO)
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="step-label col-sm-2" for="">醫事人員或公共衛生師中文證書影本</label>
                            <div class="col-sm-10">
                                @if (Model.FILE2_CHECK == "Y")
                                {
                                    @Html.FileDLForTurbo(x => x.FileList[1].FILENAME, Model.FileList[1].FILENAME + "," + Model.FileList[1].APP_ID + "," + Model.FileList[1].FILE_NO + "," + Model.FileList[1].SRC_NO)
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="step-label col-sm-2" for="">考照時之畢業證書影本</label>
                            <div class="col-sm-10">
                                @if (Model.FILE3_CHECK == "Y")
                                {
                                    @Html.FileDLForTurbo(x => x.FileList[2].FILENAME, Model.FileList[2].FILENAME + "," + Model.FileList[2].APP_ID + "," + Model.FileList[2].FILE_NO + "," + Model.FileList[2].SRC_NO)
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="step-label col-sm-2" for="">考試及格證書影本</label>
                            <div class="col-sm-10">
                                @if (Model.FILE4_CHECK == "Y")
                                {
                                    @Html.FileDLForTurbo(x => x.FileList[3].FILENAME, Model.FileList[3].FILENAME + "," + Model.FileList[3].APP_ID + "," + Model.FileList[3].FILE_NO + "," + Model.FileList[3].SRC_NO)
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="step-label col-sm-2" for="">對方機構求證表格</label>
                            <div class="col-sm-10">
                                @if (Model.FILE5_CHECK == "Y")
                                {
                                    @Html.FileDLForTurbo(x => x.FileList[0].FILENAME, Model.FileList[4].FILENAME + "," + Model.FileList[4].APP_ID + "," + Model.FileList[4].FILE_NO + "," + Model.FileList[4].SRC_NO)
                                }
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="btnbar">
                                <button type="button" class="btn btn-blue" onclick="GetZip('@Model.APP_ID')">檔案打包下載</button>
                                <button type="button" class="btn btn-blue" onclick="Print()">套印申請書</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--3-->
        <div class='panel panel-info'>
            <div class='panel-heading'>
                <h2 class='panel-title' data-toggle='collapse' data-parent='#ReviewData' href='#ReviewData'>
                    <a>案件進度歷程(點擊展開)</a>
                </h2>
            </div>
            <div id='ReviewData' class='panel-collapse collapse'>
                <div class='panel-body'>
                    <div class="form-blue">
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">案件進度</label>
                            <div class="col-sm-4">
                                <input type="text" id="StatusDesc" class="form-control" readonly value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">案件狀態修改</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.Apply.FLOW_CD, srcList.GetStatuListForDEP, new { @class = "form-control", onchange = "changeAddDocCheck()" })
                            </div>
                        </div>

                        <div id="notice" style="display:none">
                            <div class="form-group" id="notice_item">
                                <label class="main-label col-sm-2" for="">補件項目</label>
                                <div class="col-sm-4">
                                    <input type="checkbox" id="check1" name="optGroup" value="1" />護照影本<br>
                                    <input type="checkbox" id="check2" name="optGroup" value="2" />醫事人員或公共衛生師中文證書影本<br>
                                    <input type="checkbox" id="check3" name="optGroup" value="3" />考照時之畢業證書影本<br>
                                    <input type="checkbox" id="check4" name="optGroup" value="4" />考試及格證書影本<br>
                                    <input type="checkbox" id="check5" name="optGroup" value="5" />對方機構求證表格<br>
                                    <input type="checkbox" id="checkAll" name="optGroup" value="9" />其他
                                    @Html.HiddenFor(x => x.Apply.ISMODIFY)
                                </div>
                            </div>
                            <div class="form-group">
                                <label id="remark" class="main-label col-sm-2" for="">補件內容</label>
                                <div class="col-sm-4">
                                    @Html.TextAreaFor(x => x.Note, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div id="mail_record" style="display:none">
                            <div class="form-group">
                                <label class="main-label col-sm-2" for="">郵寄日期</label>
                                <div class="col-sm-4">
                                    @Html.DatePickerTWFor(x => x.MAIL_DATE_AC, new { size = "10" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="main-label col-sm-2" for="">掛號條碼</label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(x => x.MAIL_BARCODE, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group" style="">
                            <label class="main-label col-sm-2" for="">公文文號</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(x => x.Apply.MOHW_CASE_NO, new { @id = "MOHW_CASE_NO", @class = "form-control", placeholder = "" })
                            </div>
                            <button type="button" id="btnCaseNo" class="btn btn-blue" onclick="GetMOHW_CASE_NO('4','@Model.APP_ID')">取得公文文號</button>
                        </div>

                        <div class="form-group">
                            <label class="main-label col-sm-2" for="">案件歷程記錄</label>
                            <div class="col-sm-10">
                                @Html.LogForTurbo(Model.APP_ID, "APPLY_001009")
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="btn-bar text-center">
            <button type="button" id="btnSave" class="btn btn-save" onclick="doSave()">存檔</button>
            <button type="button" id="btnReturn" class="btn btn-gray" onclick="doBack()">返回</button>
        </div>
        @Html.HiddenFor(x => x.Apply.APP_ID)
        @Html.HiddenFor(x => x.APP_ID)
        @Html.HiddenFor(x => x.IsNotice)
        @Html.HiddenFor(x => x.FILE1_CHECK)
        @Html.HiddenFor(x => x.FILE2_CHECK)
        @Html.HiddenFor(x => x.FILE3_CHECK)
        @Html.HiddenFor(x => x.FILE4_CHECK)
        @Html.HiddenFor(x => x.FILE5_CHECK)
        @Html.HiddenFor(x => x.IS_FILE1)
        @Html.HiddenFor(x => x.IS_FILE2)
        @Html.HiddenFor(x => x.IS_FILE3)
        @Html.HiddenFor(x => x.IS_FILE4)
        @Html.HiddenFor(x => x.IS_FILE5)
    </div>
}

<script type="text/javascript">

    $(document).ready(function () {

        $('#CITY_CODE').on('blur', doCITYNameGet);
        doCITYNameGet();

        if ($('#IS_MERGE_FILE').val() == 'Y') {
            $('#chkFileY').prop('checked', 'checked');
        }
        else {
            $('#chkFileN').prop('checked', 'checked');
        }

        $("#StatusDesc").val($('#Apply_FLOW_CD option:selected').text());

        // 0:完成申請 9 逾期未補件而予結案 12 核可(發文歸檔) 15自請撤銷 8退件通知
        if ($('#Apply_FLOW_CD option:selected').val() == '0'
            || $('#Apply_FLOW_CD option:selected').val() == '9'
            || $('#Apply_FLOW_CD option:selected').val() == '12'
            || $('#Apply_FLOW_CD option:selected').val() == '15'
            || $('#Apply_FLOW_CD option:selected').val() == '8') {
            $('#Apply_FLOW_CD').attr('disabled', 'disabled');
            $('#MOHW_CASE_NO').attr("readonly", "readonly");
            $('#btnCaseNo').attr('disabled', 'disabled');
            $('#btnSave').hide();
            $('#mail_record').hide();
        }

        if ($('#Apply_FLOW_CD option:selected').val() == '2') {
            // 通知補件
            $('#notice').show();
            $('#notice_item').show();
            $('#note_content').show();
            $('#remark').text('補件內容');
            $('#mail_record').hide();

            if ($('#IS_FILE1').val() == 'Y') {
                $('#check1').attr('checked', true);
            }
            else {
                $('#check1').attr('checked', false);
            }

            if ($('#IS_FILE2').val() == 'Y') {
                $('#check2').attr('checked', true);
            }
            else {
                $('#check2').attr('checked', false);
            }

            if ($('#IS_FILE3').val() == 'Y') {
                $('#check3').attr('checked', true);
            }
            else {
                $('#check3').attr('checked', false);
            }

            if ($('#IS_FILE4').val() == 'Y') {
                $('#check4').attr('checked', true);
            }
            else {
                $('#check4').attr('checked', false);
            }

            if ($('#IS_FILE5').val() == 'Y') {
                $('#check5').attr('checked', true);
            }
            else {
                $('#check5').attr('checked', false);
            }

            if ($('#Apply_ISMODIFY').val() == 'Y') {
                $('#checkAll').attr('checked', true);
            }
            else {
                $('#checkAll').attr('checked', false);
            }

            $('#check1').attr('disabled', 'disabled');
            $('#check2').attr('disabled', 'disabled');
            $('#check3').attr('disabled', 'disabled');
            $('#check4').attr('disabled', 'disabled');
            $('#check5').attr('disabled', 'disabled');
            $('#checkAll').attr('disabled', 'disabled');
            $('#Note').attr('disabled', 'disabled');

        }
        else if ($('#Apply_FLOW_CD option:selected').val() == '9') {
            // 9:逾期未補件而予結案
            $('#notice').show();
            $('#notice_item').hide();
            $('#note_content').show();
            $('#remark').text('備註');
            $('#Apply_FLOW_CD').attr('disabled', 'disabled');
            $('#Note').attr('readonly', 'readonly');
        }
        else if ($('#Apply_FLOW_CD option:selected').val() == '12') {
            // 12:核可(發文歸檔)
            $('#mail_record').show();
            $('#notice').hide();
            $('#notice_item').hide();
            $('#note_content').hide();
            $('#remark').text('備註');
        }
