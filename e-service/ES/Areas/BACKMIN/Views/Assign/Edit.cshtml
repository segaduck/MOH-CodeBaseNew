@using ES.Utils;
@model ES.Areas.Admin.Models.AssignEditModel
@{
    Layout = "~/Areas/BACKMIN/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "分文處理";
    ViewBag.FunctionTitle = "分文處理";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#btn_submit').attr('disabled', true);
    });
    function onsel(val) {
        $('#PRO_ACC').val(val);
        if (val != "") {
            $('#btn_submit').attr('disabled', false);
        }
        else {
            $('#btn_submit').attr('disabled', true);
        }
    }
</script>


@using (Html.BeginForm("Edit", "Assign", FormMethod.Post, new { id = "ActionForm" }))
{
    <div class="bread">
        <i class="fas fa-home"></i>首頁 / 案件分文及處理 / @ViewBag.FunctionTitle
    </div>
    <div class="col-sm-12 content">
        <h1 class="main-title"><i class="fas fa-edit"></i>@ViewBag.FunctionTitle</h1>
        <h2 class="second-title">基本資料</h2>
        <div class="form-blue form-horizontal">
            <div class="form-group">
                <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.APP_ID)</label>
                <div class="col-sm-10">
                    @Html.DisplayFor(m => m.APP_ID)
                    @Html.HiddenFor(m => m.APP_ID)
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.SRV_ID)</label>
                <div class="col-sm-10">
                    @Html.Raw(this.Model.SRV_NAME)
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.APP_TIME)</label>
                <div class="col-sm-10">
                    @Html.Raw(this.Model.APP_TIME)
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for="">@Html.DisplayNameFor(m => m.PRO_ACC)</label>
                <div class="col-sm-10">
                    @Html.HiddenFor(m => m.PRO_ACC)
                    <select onchange="onsel(this.value)" class="form-normal">
                        <option value="">--請選擇--</option>
                        @{
                            foreach (ES.Areas.Admin.Models.Map map in WebUtils.GetSrvUnitADMIN(this.Model.SRV_ID))
                            {
                                string op = "<option value='" + map.GetString("ACC_NO") + "/" + map.GetString("UNIT_CD") +
                                    "'>" + map.GetString("UNIT_NAME") + "：" + map.GetString("NAME") + "</option>";
                                @Html.Raw(op);
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="btnbar">
            <input id="btn_submit" class="btn btn-save" type="submit" value="存檔" />
            <input type="button" class="btn btn-gray" value="返回" onclick="document.location.href='@Url.Action("Index", "Assign")';" />
        </div>
        @Html.HiddenFor(x => x.SRV_ID)
        @Html.HiddenFor(x => x.IS_HOME_PAGE)
    </div>
}