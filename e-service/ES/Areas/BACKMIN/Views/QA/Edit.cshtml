@model ES.Areas.Admin.Models.QAEditModel
@{
    Layout = "~/Areas/BACKMIN/Views/Shared/_Layout3.cshtml";

    ViewBag.Title = "問與答管理（修改）";
    ViewBag.FunctionTitle = "問與答管理 - 修改";
}

@using (Html.BeginForm("Edit", "QA", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="bread">
        <i class="fas fa-home"></i>首頁 / 前台管理 / @ViewBag.FunctionTitle
    </div>
    <div class="col-sm-12 content">
        <h1 class="main-title"><i class="fas fa-edit"></i>@ViewBag.FunctionTitle</h1>
        <h2 class="second-title">基本資料</h2>
        <div class="form-blue form-horizontal">
            <div class="form-group">
                <label class="main-label col-sm-2" for=""><span class="formRequired">*</span> @Html.DisplayNameFor(m => m.SEQ)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.SEQ, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SEQ)
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for=""><span class="formRequired">*</span> @Html.DisplayNameFor(m => m.Title)</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
            </div>
            <div class="form-group">
                <label class="main-label col-sm-2" for=""><span class="formRequired">*</span> @Html.DisplayNameFor(m => m.Content)</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "5" })
                    @Html.ValidationMessageFor(m => m.Content)
                </div>
            </div>
        </div>
        <div class="btnbar">
            @Html.HiddenFor(m => m.QAID)
            <input type="submit" class="btn btn-save" value="存檔" />
            <input type="button" class="btn btn-gray" onclick="doreset()" value="重填" />
            <input type="button" class="btn btn-gray" value="返回" onclick="document.location.href='@Url.Action("Index", "QA")';" />
        </div>
    </div>
}

<script type="text/javascript">

    function doreset() {
        $('input[type="text"]').each(function () {
            $(this).val('');
        });

        $('textarea').each(function () {
            $(this).val('');
        });
    }

</script>
