    // 送出
    function doSave() {

        var msg = "";
        $('#Apply_ISMODIFY').val('A')
        // 通知補件
        if ($('#Apply_FLOW_CD option:selected').val() == '2') {
            if ($('#check1').is(':checked')) {
                $('#FILE1_CHECK').val('Y');
                $('#Apply_ISMODIFY').val('N');
            }
            else {
                $('#FILE1_CHECK').val('N');
            }

            if ($('#check2').is(':checked')) {
                $('#FILE2_CHECK').val('Y');
                $('#Apply_ISMODIFY').val('N');
            }
            else {
                $('#FILE2_CHECK').val('N');
            }

            if ($('#check3').is(':checked')) {
                $('#FILE3_CHECK').val('Y');
                $('#Apply_ISMODIFY').val('N');
            }
            else {
                $('#FILE3_CHECK').val('N');
            }

            if ($('#checkAll').is(':checked')) {
                $('#Apply_ISMODIFY').val('Y');
            }

            if (!$('#check1').is(':checked') && !$('#check2').is(':checked') && !$('#check3').is(':checked') && !$('#checkAll').is(':checked')) {
                msg += '請勾選補件項目!!</br>';
            }

            if ($('#Note').val().trim() == '') {
                msg += '請輸入補件內容!!</br>';
            }
        }

        //核可(發文歸檔)
        if ($('#Apply_FLOW_CD option:selected').val() == '12') {
            if ($('#MAIL_DATE_AC_TW').val().trim() == '') {
                msg += '請輸入郵寄日期!!<br>';
            }
            if ($('#MAIL_BARCODE').val().trim() == '') {
                msg += '請輸入掛號條碼!!<br>';
            }
        }
        // 逾期未補件而予結案
        if ($('#Apply_FLOW_CD option:selected').val() == '9') {
            if ($('#Note').val().trim() == '') {
                msg += '請輸入備註!!</br>';
            }
        }

        if ($('#IsPay').is(':checked') && $('#PAY_EXT_TIME_AC').val().trim() == '') {
            msg += '請輸入交易日期!!<br>';
        }
        if ($('#IsPay').is(':checked') && $('#PAY_MONEY').val().trim() == '') {
            msg += '請輸入交易金額!!<br>';
        }

        if (msg != "") {
            blockAlert(msg, "提示訊息");
        }
        else {
            var appID = '@Model.APP_ID';
            var data = getFormDataToObject($("form[id=main_form]"));
            ajaxLoadMore('@Url.Action("Save")', data, function (retData) {
                if (retData.status) {
                    // 完成申請 逾期未補件而予結案 自請撤銷 退件通知 核可(發文歸檔)
                    var flowStatus = $('#Apply_FLOW_CD option:selected').val();
                    if (flowStatus == '0' || flowStatus == '9' || flowStatus == '15'
                        || flowStatus == '8' || flowStatus == '12') {
                        $('#btnSave').hide();
                        $('#Apply_FLOW_CD').attr('disabled', 'disabled');
                        $('#MOHW_CASE_NO').attr("readonly", "readonly");
                        $('#btnCaseNo').attr('disabled', 'disabled')

                        /*if ($('#Apply_FLOW_CD option:selected').val() == '2') {
                            $('#check1').attr('disabled', 'disabled');
                            $('#check2').attr('disabled', 'disabled');
                            $('#check3').attr('disabled', 'disabled');
                            $('#check4').attr('disabled', 'disabled');
                            $('#check5').attr('disabled', 'disabled');
                            $('#checkAll').attr('disabled', 'disabled');
                        }*/
                        $('#Note').attr('readonly', 'readonly');
                    }

                    if ($('#IsPay').is(':checked')) {
                        $('#IsPay').attr('disabled', 'disabled');
                        $('#PAY_MONEY').attr('readonly', 'readonly');
                        $('#PAY_EXT_TIME_AC_TW').attr("readonly", "readonly");
                        $('div[tagid="PAY_EXT_TIME_AC_TW"]').attr('disabled', 'disabled');
                    }

                    blockMessage(retData.message, "提示訊息", function () {
                        blockUI();
                        location.href = '@Url.Action("Index", "Apply_001037")?appid=' + appID;
                    });
                }
                else {
                    blockAlert(retData.message, "提示訊息");
                }
            });

        }

    }

