@using ES.Services;
@using ES.Areas.Admin.Models;
@model Apply_041001ViewModel

@{
    Layout = "~/Areas/BACKMIN/Views/Shared/_Layout.cshtml";
    ES.Models.ShareCodeListModel sc = new ES.Models.ShareCodeListModel();
    ViewBag.SRV_NAME = "全民健康保險爭議案件(權益案件及特約管理案件)線上申辦";
}

@using (Html.BeginForm("Index", "Apply_041001", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "main_form", @enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Form.APP_ID)
    @Html.HiddenFor(m => m.Form.NAME)
    @Html.HiddenFor(m => m.Form.EMAIL)
    @Html.HiddenFor(m => m.Form.APPLY_DATE)
    <div class="col-sm-12 content">
        <!-- H1 title -->
        <h1 class="main-title">
            <i class="fas fa-edit"></i>案件審理作業
        </h1>

        <div class="table-responsive">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table-typeA table">
                <thead><tr><th colspan="2">基本資料檔</th></tr></thead>
                <tbody>
                    <tr><td width="20%"><div align="center">申辦項目：</div></td><td width="80%"><div align="left">@Html.Raw(ViewBag.SRV_NAME)</div></td></tr>
                    <tr><td><div align="center">申辦日期：</div></td><td>@Model.Form.APPLY_DATE_TW</td></tr>
                    <tr><td><div align="center">預計完成日：</div></td><td>@Model.Form.APP_EXT_DATE_TW</td></tr>
                    <tr><td><div align="center">本部案件承辦人姓名：</div></td><td>@Model.Form.PRO_NAM</td></tr>
                    <tr><td><div align="center">案件編號：</div></td><td>@Model.Form.APP_ID</td></tr>
                    <tr><td><div align="center">系統狀態：</div></td><td>@Model.Form.APP_STATUS</td></tr>
                </tbody>
            </table>
        </div>
        <!--1-->
        @*(1)	基本資料檔(點擊展開)*@
