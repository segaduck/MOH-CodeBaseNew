    function changeAddDocCheck() {
        var flowOption = $('#Form_FLOW_CD option:selected').val();
        $('#notice').hide(); //補件項目(附件)
        $('#noticeContent').hide(); //補件內容
        $('#notice_ITEM').hide();
        $('#notice_ITEM2').hide();
        if (flowOption == '2') {
