<script type="text/javascript">

    $(document).ready(function () {

        $('#DIVISION').change(function () {
            GetLicNumList();
            $('#DIVISION_TEXT').val($('option:selected', this).text());
        });

        $('input[name="R1"]').each(function () {
            if ($(this).val().trim() == $('#REASON_1').val()) {
                $(this).prop('checked', 'checked');
            }
        });

        if ($('#REASON_1').val().trim() == '1') {
            $('input[name="R2"]').each(function () {
                if ($(this).val().trim() == $('#REASON_2').val()) {
                    $(this).prop('checked', 'checked');
                }
            });

            $('input[name="R3"]').each(function () {
                if ($(this).val().trim() == $('#REASON_3').val()) {
                    $(this).prop('checked', 'checked');
                }
            });
        }
        else {
            if ($('#REASON_4').val().trim() != '') {
                $('#R4').prop('checked', 'checked');
            }

            if ($('#REASON_5').val().trim() != '') {
                $('#R5').prop('checked', 'checked');
            }
        }

        if ($('#IS_MERGE_FILE').val() == 'Y') {
            $('#chkFileY').prop('checked', 'checked');
        }
        else {
            $('#chkFileN').prop('checked', 'checked');
        }

        $("input[name='R1']").on('click', function () {
            if ($("input[name='R1']:checked").val() == "1") {
                $('#REASON_1').val('1');
                $('#REASON_1_TEXT').val('出國使用');
            }

            if ($("input[name='R1']:checked").val() == "2") {
                $('#REASON_1').val('2');
                $('#REASON_1_TEXT').val('國內使用');
            }
        });

        $("input[name='R2']").on('click', function () {
            if ($("input[name='R2']:checked").val() == "5") {
                $("#REASON_2_DESC").removeProp('disabled');
            } else {
                $("#REASON_2_DESC").prop('disabled', 'disabled');
            }

            if ($("input[name='R2']:checked").val() == "3") {
                $('#REASON_2').val('3');
                $('#REASON_2_TEXT').val('出國執業');
                $('#REASON_2_DESC').val('');
            }

            if ($("input[name='R2']:checked").val() == "4") {
                $('#REASON_2').val('4');
                $('#REASON_2_TEXT').val('出國進修');
                $('#REASON_2_DESC').val('');
            }

            if ($("input[name='R2']:checked").val() == "5") {
                $('#REASON_2').val('5');
                $('#REASON_2_TEXT').val('其他原因');
            }
        })

        $("input[name='R3']").on('click', function () {
            if ($("input[name='R3']:checked").val() == "15") {
                $("#REASON_3_DESC").removeProp('disabled');
            } else {
                $("#REASON_3_DESC").prop('disabled', 'disabled');
            }

            if ($("input[name='R3']:checked").val() == "11") {
                $('#REASON_3').val('11');
                $('#REASON_3_TEXT').val('美國、加拿大');
                $('#REASON_3_DESC').val('');
            }

            if ($("input[name='R3']:checked").val() == "12") {
                $('#REASON_3').val('12');
                $('#REASON_3_TEXT').val('紐西蘭、澳洲');
                $('#REASON_3_DESC').val('');
            }

            if ($("input[name='R3']:checked").val() == "13") {
                $('#REASON_3').val('13');
                $('#REASON_3_TEXT').val('歐洲地區');
                $('#REASON_3_DESC').val('');
            }

            if ($("input[name='R3']:checked").val() == "14") {
                $('#REASON_3').val('14');
                $('#REASON_3_TEXT').val('美大陸地區');
                $('#REASON_3_DESC').val('');
            }

            if ($("input[name='R3']:checked").val() == "141") {
                $('#REASON_3').val('141');
                $('#REASON_3_TEXT').val('香港');
                $('#REASON_3_DESC').val('');
            }

            if ($("input[name='R3']:checked").val() == "142") {
                $('#REASON_3').val('142');
                $('#REASON_3_TEXT').val('澳門');
                $('#REASON_3_DESC').val('');
            }

            if ($("input[name='R3']:checked").val() == "15") {
                $('#REASON_3').val('15');
                $('#REASON_3_TEXT').val('其他國家');
            }

        })

        $("input[name='R4']").on('click', function () {
            if ($("input[name='R4']:checked").val() == "6") {
                $('#REASON_4').val('6');
                $('#REASON_4_TEXT').val('機關要求');
                $('#REASON_5').val('');
                $('#REASON_5_TEXT').val('');
                $('#REASON_5_DESC').val('');
            }
        });

        $("input[name='R5']").on('click', function () {
            if ($("input[name='R5']:checked").val() == "7") {
                $('#REASON_5').val('7');
                $('#REASON_5_TEXT').val('其他原因');
                $('#REASON_4').val('');
                $('#REASON_4_TEXT').val('');
                $('#REASON_4_DESC').val('');
            }
        });

        if ($('#IS_MERGE_FILE').val() == 'Y') {
            $('#chkFileY').prop('checked', 'checked');
        }
        else {
            $('#chkFileN').prop('checked', 'checked');
        }

        $("input[type='radio'][name='R1']").on('change', function () {
