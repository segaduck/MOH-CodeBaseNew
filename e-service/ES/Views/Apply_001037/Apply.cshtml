        $("#REASON_2_DESC").prop('disabled', 'disabled');
        $("#REASON_3_DESC").prop('disabled', 'disabled');

        $('#REASON_1').val('1');
        $('#REASON_1_TEXT').val('出國使用');

        $('#REASON_2').val('4');
        $('#REASON_2_TEXT').val('出國進修');

        $('#DIVISION').change(function () {
