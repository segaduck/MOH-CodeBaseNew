@{
    Layout = null;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.SRV_NAME = "社工師證書核發(英文)";

    
    string s_msg_T1A = @"
英文證書核發申請流程
（一）請至【衛生福利部人民申請案件線上申辦系統】加入會員申辦，填列基本資料，並上傳佐證文件檔案（※無須另行郵寄），完成線上申請。（路徑：衛生福利部首頁 / 便民服務 / 人民線上申辦服務專區 / 申辦服務 / 社工相關/社工師證書核發(英文) / 線上申辦）

（二）備註：申請英文證書免附匯票。

檢附文件
社會工作師證書核（換、補）發，一律採線上申請方式辦理
1.社會工作師證書影本(同時申請中文證書及英文證明者，請改檢附考選部考試及格證書影本或電子證書)

收費說明
申請英文證書免附匯票。

備註
（一）處理期間：3週（21工作天），不含例假日、紙本寄件及補件時間。

";
    string s_msg_T1 = string.Format(s_msg_T1A);
}
<div class="container">
    <div class="col-sm-12">
        <!-- bread  -->
        <div class="breadlink"><i class="fas fa-home"></i><a href="@(Url.Action("Index", "Login"))">首頁</a> ／ <a href="@(Url.Action("Index", "Service"))">申辦服務</a> ／ <a href="#">@Html.Raw(ViewBag.SRV_NAME)</a></div>
        <div class="clearfix"></div>
        <div class="step_map">
            <ul>
                <li id="Apply_Tab" class="active">填寫申報表件並上傳檔案</li>
                <li id="PreView_Tab">預覽申辦表件</li>
                <li id="Pay_Tab">繳費</li>
                <li>完成申報</li>
            </ul>
        </div>

        <div class="form-set">
            <h1 class="form-title title-bg-y">@Html.Raw(ViewBag.SRV_NAME)說明事項</h1>
            @*class="form-group"*@
            <div class="form-group service-main index-note">
                <div class="tab-content">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <p class="member-note">
                                建議您仔細閱讀以下事項，備齊相關文件再申請喔。<br />
                            </p>
                            <textarea class="form-control" rows="15" readonly="readonly" >@Html.Raw(s_msg_T1)</textarea>
                            <p class="member-note">本人已閱讀以上條款，本次申請資料均由本人提供，資料屬實並無違反相關法令，如填寫假資料或有違規情事，願接受相關罰則。</p>
                            <p class="member-note">如果您已經了解並接受，請按「同意」，進行下一個步驟填寫資料</p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="btn-bar text-center">
                        <button type="button" class="btn btn-save" onclick="doCheck()">同意</button>
                        <button type="button" class="btn btn-clear" onclick="doBack()">取消</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="clearfix"></div>

<script>

    //同意
    function doCheck() {
        var agree1 = { "agree": 1 }
        location.href = '@Url.Action("APPLY", "APPLY_011004")?' + $.param(agree1);
    }

    // 取消
    function doBack() {
        location.href = '@Url.Action("Index", "Service")';
    }

</script>
