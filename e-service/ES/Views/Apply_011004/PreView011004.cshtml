@using ES.Models;
@using ES.Services;
@using ES.Models.ViewModels;
@model Apply_011004FormModel
@{
    Layout = null;
    ShareCodeListModel sc = new ShareCodeListModel();
}
<div class="row">
    <div class="col-sm-12">
        <h1 class="form-title title-bg-y">申辦表件預覽</h1>
        <div class="form-set">
            <div class="form-group">
                <label class="step-label col-sm-2" for="">申辦項目</label>
                <div class="col-sm-4">
                    <p class="form-control-static">社工師證書核發（英文）</p>
                </div>
                <label class="step-label col-sm-2" for="">申辦日期</label>
                <div class="col-sm-4">
                    <p class="form-control-static">@Model.APP_DATE</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.EMAIL)</label>
                <div class="col-sm-4">
                    <p class="form-control-static">
                        @Model.EMAIL
                    </p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.NAME)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.NAME</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.ENAME)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ENAME</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.SEX_CD)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @if (Model.SEX_CD == "M")
                        {
                            @Html.Raw("男")
                        }
                        else if (Model.SEX_CD == "F")
                        {
                            @Html.Raw("女")
                        }
                        else
                        {
                            @Html.Raw("其他")
                        }
                    </p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.BIRTHDAY_STR)</label>
                <div class="col-sm-2">
                    <p class="form-control-static">@Model.BIRTHDAY_STR</p>
                </div>
            </div>
            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.IDN)</label>
                <div class="col-sm-4">
                    <p class="form-control-static">@Model.IDN</p>
                </div>
            </div>
            <div class="form-group">
                <label class="step-label col-sm-2" for="">@Html.DisplayNameFor(m => m.C_TEL)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.C_TEL</p>
                </div>
            </div>
            <div class="form-group">
                <label class="step-label col-sm-2" for="">@Html.DisplayNameFor(m => m.H_TEL)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.H_TEL</p>
                </div>
            </div>
            <div class="form-group">
                <label class="step-label col-sm-2" for="">@Html.DisplayNameFor(m => m.MOBILE)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.MOBILE</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.C_ZIPCODE)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.C_ZIPCODE @Model.C_ZIPCODE_TEXT@Model.C_ADDR</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.APPLY_FOR)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.APPLY_FOR</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.APPLY_NUM)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.APPLY_NUM</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.TYEAR)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.TYEAR</p>
                </div>
            </div>

            <div class="form-group">
                <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>@Html.DisplayNameFor(m => m.TYPE)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.TYPE</p>
                </div>
            </div>
            <h2 class="second-title">上傳附件預覽</h2>
            <div class="form-group">
                <label class="step-label col-sm-2" for="">社會工作師證書影本</label>
                <div class="col-sm-10">
                    @Html.ImageHoverForTurbo(x => x.FILE_0, Model.FILE_0_TEXT, 0, SRV_ID:"011004")
                </div>
            </div>
        </div>
    </div>
</div>

<!--form-->
<div class="form-set">
    <div class="btn-bar text-center">
        <button type="button" class="btn btn-save" onclick="doSave()">確認送出</button>
        <button type="button" class="btn btn-clear" onclick="doback()">返回修改</button>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('[data-hover!=\"\"]').hover();
    });

    // 送出
    function doSave() {
        blockUI();
        var form = $("form[id=main_form]");
        form.attr('action', '@Url.Action("Save")').submit();
    }

    // 返回
    function doback() {
        $('#form_tab').attr('class', 'active');
        $('#form').attr('class', 'tab-pane fade active in');
        $('#form_tab1').removeClass('active');
        $('#form1').attr('class', 'tab-pane fade');
    }
</script>
