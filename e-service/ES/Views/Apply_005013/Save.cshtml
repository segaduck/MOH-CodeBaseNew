@using System.Web.Razor.Parser
@using ES.Models
@model ES.Models.ViewModels.Apply_005013FormModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div class="col-sm-12">
        <!-- bread  -->
        <div class="breadlink"><i class="fas fa-home"></i><a href="#">首頁</a> ／ <a href="#">申辦服務</a> ／ <a href="#">少量自用中藥樣品申請</a></div>
        <div class="clearfix"></div>
        <div class="step_map">
            <ul>
                <li>填寫申報表件並上傳檔案</li>
                <li>預覽申辦表件</li>
                <li class="active">完成申報</li>
            </ul>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <h1 class="form-title title-bg-y">完成申報</h1>
            </div>
        </div>
        <!--form-->
        <div class="form-set">
            <form class="form-horizontal">
                <div class="form-group">
                    @if (string.IsNullOrEmpty(Model.DOCYN))
                    {
                        <div class="col-sm-12" style="margin-top: 10px">
                            申請人您好：<br />
                            您申請民眾少量自用中藥貨品進口，已完成系統資料填答及上傳程序，將儘速辦理您的申請案件，謝謝。
                            <div style="float: right">衛生福利部 中醫藥司</div>
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-12" style="margin-top: 10px">
                            敬啟者：<br />
                            您已完成資料補件，將盡速辦理您的申辦案件，謝謝。
                            <br /><br />
                            <div style="float: right">衛生福利部 中醫藥司</div>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
