@using ES.Models;
@using ES.Services;
@using ES.Models.ViewModels;
@model Apply_012001DoneModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ShareCodeListModel sc = new ShareCodeListModel();
    SessionModel sm = SessionModel.Get();
}


<div class="container">
    <div class="col-sm-12">
        <!-- bread  -->
        <div class="breadlink"><i class="fas fa-home"></i><a href="@(Url.Action("Index", "Login"))">首頁</a> ／ <a href="@(Url.Action("Index", "Service"))">申辦服務</a> ／ <a href="#">檔案應用申請</a></div>
        <div class="clearfix"></div>
        <div class="step_map">
            <ul>
                <li>填寫申報表件並上傳檔案</li>
                <li>預覽申辦表件</li>
                <li class="active">完成申報</li>
            </ul>
        </div>
        <h1 class="form-title  title-bg-y">訊息</h1>
        <div class="form-set">
            <div class="form-group">
                <div class="col-sm-12">
                    @sm.UserInfo.Member.NAME，您好:
                    @switch (Model.status.TONotNullString())
                    {
                        case "1":
                            @Html.Raw("您所提交的檔案應用申請，已完成系統資料填答及上傳流程，請於電子郵件信箱內點選確認申辦回覆連結後(連結有效期限為24小時)，將儘速辦理您的申請案件，謝謝。");
                            break;
                        case "2":
                            @Html.Raw("您申請的檔案應用申請，已完成資料補件，將盡速辦理您的申辦案件，謝謝。");
                            break;
                    }

                    <br />
                    <div style="float:right">衛生福利部</div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

</div>
