    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>身分證正面影本</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FILE_IDNF, new { @id = "FILE_IDNF", @class = "form-control", placeholder = "", type = "file", onchange = "doGetFileNam(this)" })
            @Html.HiddenFor(m => m.FILE_IDNF_TEXT)
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>身分證反面影本</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FILE_IDNB, new { @id = "FILE_IDNB", @class = "form-control", placeholder = "", type = "file", onchange = "doGetFileNam(this)" })
            @Html.HiddenFor(m => m.FILE_IDNB_TEXT)
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>照片(規格應同護照照片)</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FILE_PHOTO, new { @id = "FILE_PHOTO", @class = "form-control", placeholder = "", type = "file", onchange = "doGetFileNam(this)" })
            @Html.HiddenFor(m => m.FILE_PHOTO_TEXT)
        </div>
    </div>

    @*申請更名時，需上傳戶籍謄本或戶口名簿*@
    <div class="form-group" id="opt4" style='@(Model.APPLY_TYPE=="3"?"":"display:none;")'>
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>戶籍謄本或戶口名簿影本</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FILE_HOUSEHOLD, new { @id = "FILE_HOUSEHOLD", @class = "form-control", placeholder = "", type = "file", onchange = "doGetFileNam(this)" })
            @Html.HiddenFor(m => m.FILE_HOUSEHOLD_TEXT)
        </div>
    </div>

    <h2 class="second-title">提醒郵遞</h2>
    <div class="form-group">
        <label class="step-label col-sm-2" for="">提醒須郵遞投回</label>
