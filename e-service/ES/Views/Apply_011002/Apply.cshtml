    ShareCodeListModel sc = new ShareCodeListModel();
}

<h1 class="form-title  title-bg-y">申辦表件填寫</h1>
<div class="form-set">
    <div class="form-group">
        <label class="step-label col-sm-2" for="">申辦項目</label>
        <div class="col-sm-4">
            <p class="form-control-static">專科社會工作師證書核發</p>
        </div>
        <label class="step-label col-sm-2" for="">申辦日期</label>
        <div class="col-sm-4">
            <p class="form-control-static"> @Model.APP_TIME_SHOW</p>@Html.HiddenFor(m => m.APP_TIME_SHOW)
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>申請用途</label>
        <div class="col-sm-10">
            @for (var i = 0; i < Model.APPLY_TYPE_LIST.Count(); i++)
            {
                var item = Model.APPLY_TYPE_LIST[i];
                <label class="radio-inline ">
                    @if (Model.APPLY_TYPE == item.Value)
                    {
                        <input type="radio" id="APPLY_TYPE@("_"+i.ToString())" name="APPLY_TYPE" value="@item.Value" onchange="APPLY_TYPE_CHK(this)" @((Model.APPLY_TYPE == item.Value) ? "checked" : "") disabled>@item.Text
                    }
                </label>
            }
            @Html.HiddenFor(m => m.APPLY_TYPE)
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span><span style="color:red">(擇一勾選)</span>&nbsp;&nbsp;專科類別</label>
        <div class="col-sm-10">
            @for (var i = 0; i < Model.SPECIALIST_TYPE_LIST.Count(); i++)
            {
                var item = Model.SPECIALIST_TYPE_LIST[i];
                <label class="radio-inline "><input type="radio" id="SPECIALIST_TYPE@("_"+i.ToString())" name="SPECIALIST_TYPE" value="@item.Value" onchange="SPECIALIST_CHK(this)" ) @((Model.SPECIALIST_TYPE == item.Value) ? "checked" : "")>@item.Text</label>
            }
            @Html.HiddenFor(m => m.SPECIALIST_TYPE)
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>姓名</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.NAME, new { @class = "form-normal", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>出生年月日</label>
        <div class="col-sm-2">
            @Html.DatePickerTWFor(m => m.BIRTHDAY_AD, new { size = "10", @readonly = "readonly", @disabled = "disabled" }, true)
            @Html.HiddenFor(m => m.BIRTHDAY_AD)
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>國民身分證統一編號</label>
        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.IDN, new { @class = "form-normal", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>性別</label>
        <div class="col-sm-4">
            @for (var i = 0; i < Model.SEX_CD_LIST.Count(); i++)
            {
                var item = Model.SEX_CD_LIST[i];
                <label class="radio-inline ">
                    <input type="radio" id="SEX_CD@("_"+i.ToString())" name="SEX_CD" value="@item.Value" onchange="RadioSEXChange(this)" @((Model.SEX_CD == item.Value) ? "checked" : "") disabled>@item.Text
                </label>
            }
            @Html.HiddenFor(m => m.SEX_CD)
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for="">電話(公)</label>
        <div class="col-sm-10">
            <span>(</span>
            @Html.TextBoxFor(m => m.W_TEL_0, new { @class = "form-normal" })
            <span>)</span>
            @Html.TextBoxFor(m => m.W_TEL_1, new { @class = "form-normal" })
            <span>#</span>
            @Html.TextBoxFor(m => m.W_TEL_2, new { @class = "form-normal form-10" })
            <span>電話(公)、電話(宅)、行動電話請擇一填寫</span>
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for="">電話(宅)</label>
        <div class="col-sm-10">
            <span>(</span>
            @Html.TextBoxFor(m => m.H_TEL_0, new { @class = "form-normal" })
            <span>)</span>
            @Html.TextBoxFor(m => m.H_TEL_1, new { @class = "form-normal" })
            <span>#</span>
            @Html.TextBoxFor(m => m.H_TEL_2, new { @class = "form-normal form-10" })
            <span>電話(公)、電話(宅)、行動電話請擇一填寫</span>
        </div>
    </div>

    <div class="form-group">
        <label class="step-label col-sm-2" for="">行動電話</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.MOBILE, new { @class = "form-normal", MaxLength = 10 })
