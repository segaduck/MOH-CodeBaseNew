    // 是否合併檔案
    function RadioChange() {
        $("#MERGEYN").val($('input[name="RadioMerge"]:checked').val());
        var APPLY_TYPE = $('input[name="APPLY_TYPE"]:checked').val();
        if (APPLY_TYPE == "3") {
