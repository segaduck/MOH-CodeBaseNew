@using ES.Models;
@using ES.Models.ViewModels;
@model Apply_010002AppDocModel

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ShareCodeListModel sc = new ShareCodeListModel();
    ViewBag.SRV_NAME = "低收入戶及中低收入戶之體外受精(俗稱試管嬰兒)補助方案";
    bool ReadOnly = !Model.FieldStr.Contains("ALL");

    //string s_H_EQUAL = "";
    //if (Model.H_EQUAL != null && Model.H_EQUAL.Equals("Y")) { s_H_EQUAL = @"同戶籍地址"; }
    //string s_MERGEYN = "否";
