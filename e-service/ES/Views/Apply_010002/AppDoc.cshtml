        $("#TEST_YEAR").prop("disabled", false);

        $("input[name='APPLY_TYPE']").prop("disabled", false);
        $("input[name='SPECIALIST_TYPE']").prop("disabled", false);

        $("#EMAIL_1").prop("disabled", false);
        var form = $("form[id=main_form]");
        form.attr('action', '@Url.Action("SaveAppDoc")').submit();
    }

