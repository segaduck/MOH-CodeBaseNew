<script type="text/javascript">

    $(document).ready(function () {

        $('#MAIL_COUNTRY').val('TW');
        $('#COUNTRY_TEXT').val('台灣(Taiwan)');

        $('#DOMAINList').change(function () {
            if ($('#DOMAINList option:selected').text() == '自訂' || $('#DOMAINList option:selected').text() == '請選擇') {
                $('#MAIL_DOMAIN').val('');
            }
            else {
                $('#MAIL_DOMAIN').val($('#DOMAINList option:selected').text());
            }
        });

        $('#CITY_CODE').on('blur', doCITYNameGet);
        doCITYNameGet();

        $('#APPLY_CERT_CATE').change(function () {
            $('#APPLY_CERT_CATE_TEXT').val($('option:selected', this).text());
            GetLicNumList();
        });

        $('#MAIL_COUNTRY').change(function () {
            $('#COUNTRY_TEXT').val($('option:selected', this).text());
        });

        $("#yearList1").change(function () {
            $('#YEAR1').val($("option:selected", this).val());
        });

        $("#monthList1").change(function () {
            $('#MONTH1').val($("option:selected", this).val());
        });

        $("#yearList2").change(function () {
            $('#YEAR2').val($("option:selected", this).val());
        });

        $("#monthList2").change(function () {
            $('#MONTH2').val($("option:selected", this).val());
        });

        genYM();

        $('#YEAR1').val($('#yearList1').val());
        $('#MONTH1').val($('#monthList1').val());
        $('#YEAR2').val($('#yearList2').val());
        $('#MONTH2').val($('#monthList2').val());
    });

    // 地址
    function loadDialogCITYCodeMapName(data) {
        ajaxLoadMore(data.url, data.arg, function (resp) {
            if (resp === undefined) data.box.val('');
            else {
                if (resp.data != '') data.box.val(resp.data);
                else { data.box.val(''); data.add.val(''); blockAlert(data.msg); }
            }
        });
    };

    function doCITYSelect() {
        var url = '/ZIP_CO';
        var title = '郵遞區號查詢'; popupWindow({ 'width': 900 }, url, title, null, function (retData, doc) {
            if (retData != null) {
                $('#CITY_CODE').val(retData.Id);
                $('#CITY_TEXT').val(retData.Name);
            }
        });
    }

    function doCITYNameGet() {
        var code = $('#CITY_CODE');
        var data = { 'url': '/Ajax/GetCityTown', 'msg': '查無該郵遞區號!!', 'arg': { 'CODE': code.val().toUpperCase() }, 'box': $('#CITY_TEXT'), 'add': $('#CITY_CODE') };
        if ($.trim(data.arg.CODE) == '') data.box.val('');
        else {
            code.val(data.arg.CODE);
            loadDialogCITYCodeMapName(data);
        }
    };

    //預覽
    function doPreView() {

        if (validation()) {
            $('#LIC_CD_TEXT').val($('#LIC_TYPE option:selected').text());
            $('#LIC_CD').val($('#LIC_TYPE option:selected').text());

            $('#FULL_ADDRESS').val($('#CITY_CODE').val() + $('#CITY_TEXT').val() + $('#CITY_DETAIL').val())

            if ($('#TEL_SEC').val() == '' || $('#TEL_NO').val() == '') {
                $('#TEL').val('');
            }
            else {
                $('#TEL').val($('#TEL_SEC').val() + '-' + $('#TEL_NO').val())
            }

            if ($('#TEL').val() != '' && $('#TEL_EXT').val() != '') {
                $('#TEL').val($('#TEL_SEC').val() + '-' + $('#TEL_NO').val() + '#' + $('#TEL_EXT').val());
            }

            if ($('#FAX_SEC').val() == '' || $('#FAX_NO').val() == '') {
                $('#FAX').val('');
            }
            else {
                $('#FAX').val($('#FAX_SEC').val() + '-' + $('#FAX_NO').val())
            }

            if ($('#FAX').val() != '' && $('#FAX_EXT').val() != '') {
                $('#FAX').val($('#FAX_SEC').val() + '-' + $('#FAX_NO').val() + '#' + $('#FAX_EXT').val());
            }

            $('#MAIL').val($('#MAIL_ACCOUNT').val() + '@@' + $('#MAIL_DOMAIN').val().replace('@@', ''));

            $('#IS_MERGE_FILE').val($('input[type="radio"]:checked').val());

            var data = getFormDataToObject($("form[id=main_form]"));
            ajaxLoadMore('@Url.Action("ApplyAjax")', data, function (retData) {
                if (retData.status) {
                    ajaxLoadMore('@Url.Action("PreView")', data, function (getHtml) {
                        $('#Apply_Tab').removeClass('active');
                        $('#ApplyForm').attr('class', 'tab-pane fade');

                        $('#PreView_Tab').attr('class', 'active');
                        $('#PreViewForm').attr('class', 'tab-pane fade active in');

                        $("#PreViewForm").html(getHtml);

                    });
                }
                else {
                    blockAlert(retData.message, "提示訊息");
                }
            });
        }
    }

    function validation() {

        var msg = '';

        if ($('#APPLY_NAME').val().trim() == '') {
            msg += '請輸入申請人<br/>';
        }

        if ($('#APPLY_PID').val().trim() == '') {
