<script type="text/javascript">

    $(document).ready(function () {

        $('#DIVISION').change(function () {
            GetLicNumList();
        });

        $('#ACTION_TYPE').change(function () { 
            $('#ACTION_TYPE_TEXT').val($('#ACTION_TYPE option:selected').val());
        });  

        $('#ActionTyp1').click(function () {
            $('#ActionTyp1').attr("checked", "checked");
            $('#ActionTyp2').removeAttr("checked");
            $('#ACTION_TYPE').val("1");
            $('#ACTION_TYPE_TEXT').val("補發");
            onChangeACTION_TYPE();
        });

        $('#ActionTyp2').click(function () {
            $('#ActionTyp2').attr("checked", "checked");
            $('#ActionTyp1').removeAttr("checked");
            $('#ACTION_TYPE').val("2");
            $('#ACTION_TYPE_TEXT').val("換發");
            onChangeACTION_TYPE();
            blockAlert("需將原領證書正本寄回衛生福利部護理及健康照護司", "訊息");
        }); 

        $('#ACTION_RES').change(function () {
            $('#ACTION_RES_TEXT').val($('#ACTION_RES option:selected').text());
        })

        $('#DOMAINList').change(function () {
            if ($('#DOMAINList option:selected').text() == '自訂' || $('#DOMAINList option:selected').text() == '請選擇') {
                $('#MAIL_DOMAIN').val('');
            }
            else {
                $('#MAIL_DOMAIN').val($('#DOMAINList option:selected').text());
            }
        });

        $('#CITY_CODE').on('blur', doCITYNameGet);
        doCITYNameGet();

        GetLicNumList(); 

        if ($('#ACTION_TYPE').val() == '1') {
            $('input[type="radio"]').removeAttr('disabled');
            $('#ActionTyp1').attr("checked", "checked");
            $('input[type="radio"]').attr('disabled', 'disabled');
        }

        if ($('#ACTION_TYPE').val() == '2') {
            $('input[type="radio"]').removeAttr('disabled');
            $('#ActionTyp2').attr("checked", "checked");
            $('input[type="radio"]').attr('disabled', 'disabled');
        }

        $('#btnReturn').click(function () {
            location.href = '/history/';
        });
    });

    function onChangeACTION_TYPE() {
        $("#ACTION_RES option[value='A']").remove();
        $("#ACTION_RES option[value='B']").remove();
        $("#ACTION_RES option[value='E']").remove();
        if ($('#ACTION_TYPE').val() == "2") {
            // 換發 遺失項目隱藏
            $('#ACTION_RES').append('<option value="B">破損</option>');
            $('#ACTION_RES').append('<option value="E">其他</option>');
        } else {
            $('#ACTION_RES').append('<option value="A">遺失</option>');
            $('#ACTION_RES').append('<option value="B">破損</option>');
            $('#ACTION_RES').append('<option value="E">其他</option>');
        }
    }
    function GetLicNumList() {
        var code_pcd = $('#DIVISION');

        var data = {
            'url': '/Ajax/GetLicNumList', 'msg': '查無該證書字號!!', 'arg': { 'code_pcd': code_pcd.val() }, 'result': $('#DIVISION')
        };

        if ($.trim(data.arg.code_pcd) == '')
            data.result.val('');
        else {
            code_pcd.val(data.arg.code_pcd);
            loadLicNumList(data, 'LIC_CD');
        }
    };

    function loadLicNumList(data, objectId) {
        ajaxLoadMore(data.url, data.arg, function (resp) {
            if (resp === undefined) {
                data.result.val('');
            }
            else {
                if (resp.data != '') {
                    $('#' + objectId).empty();
                    $.each(resp.data, function (i, item) {
                        $('#' + objectId).append('<option value=' + item.CODE + ' selected>' + item.TEXT + '</option>');
                    });
                }
                else {
                    data.result.val('');
                    blockAlert(data.msg);
                }
            }
        });
    };

    // 地址
    function loadDialogCITYCodeMapName(data) {
        ajaxLoadMore(data.url, data.arg, function (resp) {
            if (resp === undefined) data.box.val('');
            else {
                if (resp.data != '') data.box.val(resp.data);
                else { data.box.val(''); data.add.val(''); blockAlert(data.msg); }
            }
        });
    };

    function doCITYSelect() {
        var url = '/ZIP_CO';
        var title = '郵遞區號查詢'; popupWindow({ 'width': 900 }, url, title, null, function (retData, doc) {
            if (retData != null) {
                $('#CITY_CODE').val(retData.Id);
                $('#CITY_TEXT').val(retData.Name);
            }
        });
    }

    function doCITYNameGet() {
        var code = $('#CITY_CODE');
        var data = { 'url': '/Ajax/GetCityTown', 'msg': '查無該郵遞區號!!', 'arg': { 'CODE': code.val().toUpperCase() }, 'box': $('#CITY_TEXT'), 'add': $('#CITY_CODE') };
        if ($.trim(data.arg.CODE) == '') data.box.val('');
        else {
            code.val(data.arg.CODE);
            loadDialogCITYCodeMapName(data);
        }
    }; 

</script>
