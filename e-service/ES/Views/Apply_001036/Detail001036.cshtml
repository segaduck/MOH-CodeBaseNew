                        <label class="step-label col-sm-2" for=""><span style="color:red;">*</span>補(換)發原因</label>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(x => x.ACTION_RES, srcList.GetAction_ResList, new { @class = "form-control", @disabled = "disabled" })
                            @Html.HiddenFor(x => x.ACTION_RES_TEXT)
