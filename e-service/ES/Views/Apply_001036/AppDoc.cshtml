<script type="text/javascript">

    $(document).ready(function () {

        $('#DIVISION').change(function () {
            GetLicNumList();
        });

        $('#ACTION_TYPE').change(function () {
            $('#ACTION_TYPE_TEXT').val($('#ACTION_TYPE option:selected').val());
        });

        $('#ACTION_RES').change(function () {

            if ($('#ActionTyp2').is(':checked') && $('#ACTION_RES option:selected').val() == 'A') {
                blockAlert('換發原因不可為遺失，請重新選擇!!', '訊息');
                $('#ACTION_RES').val('');
            }
            else {
                if ($('option:selected', this).val() == 'E') {
                    $('#OTHER_RES').removeProp("readonly");
                }
                else {
                    $('#OTHER_RES').prop("readonly", "readonly");
                    $('#OTHER_RES').val('');
                }
                $('#ACTION_RES_TEXT').val($('#ACTION_RES option:selected').text());
            }

        });

        $('#ActionTyp1').click(function () {
            $('#ActionTyp1').attr("checked", "checked");
            $('#ActionTyp2').removeAttr("checked");
            $('#ACTION_TYPE').val("1");
            $('#ACTION_TYPE_TEXT').val("補發");
            $('#ACTION_RES').val('');
            onChangeACTION_TYPE();
        });

        $('#ActionTyp2').click(function () {
            $('#ActionTyp2').attr("checked", "checked");
            $('#ActionTyp1').removeAttr("checked");
            $('#ACTION_TYPE').val("2");
            $('#ACTION_TYPE_TEXT').val("換發");
            $('#ACTION_RES').val('');
            onChangeACTION_TYPE();
            blockAlert("需將原領證書正本寄回衛生福利部護理及健康照護司", "訊息");
        });

        $('#DOMAINList').change(function () {
            if ($('#DOMAINList option:selected').text() == '自訂' || $('#DOMAINList option:selected').text() == '請選擇') {
                $('#MAIL_DOMAIN').val('');
            }
            else {
                $('#MAIL_DOMAIN').val($('#DOMAINList option:selected').text());
            }
        });

        $('#CITY_CODE').on('blur', doCITYNameGet);
        doCITYNameGet();

        GetLicNumList();

        if ($('#Apply_FLOW_CD').val() == '2' && $('#IsNotice').val() == 'Y') {

            if ($('#Apply_ISMODIFY').val() == 'Y') {
                $('div[tagid="BIRTHDAY_AC_TW"]').removeAttr('disabled');
                $('div[tagid="ISSUE_DATE_AC_TW"]').removeAttr('disabled');
                $('input[type="text"]').removeAttr('readonly');
                $('input[type="text"]').removeAttr('disabled');
                $('input[type="radio"]').removeAttr('disabled');
                $('select').removeAttr('disabled');
                $('#ATTACH_FILE').removeAttr('disabled')
                if ($('#ACTION_RES option:selected').val() == 'E') {
                    $('#OTHER_RES').removeProp("readonly");
                }
                else {
                    $('#OTHER_RES').prop("readonly", "readonly");
                    $('#OTHER_RES').val('');
                }
            }
            else {
                $('#ATTACH_FILE').removeAttr('disabled')
            }
        }
        else {
            $('#btnSave').hide();
        }

        if ($('#ACTION_TYPE').val() == '1') {
            $('#ActionTyp1').attr("checked", "checked");
        }

        if ($('#ACTION_TYPE').val() == '2') {
            $('#ActionTyp2').attr("checked", "checked");
        }

        $('#btnReturn').click(function () {
            location.href = '/history/';
        });

    });

    function onChangeACTION_TYPE() {
        $("#ACTION_RES option[value='A']").remove();
        $("#ACTION_RES option[value='B']").remove();
        $("#ACTION_RES option[value='E']").remove();
        if ($('#ACTION_TYPE').val() == "2") {
            // 換發 遺失項目隱藏
            $('#ACTION_RES').append('<option value="B">破損</option>');
            $('#ACTION_RES').append('<option value="E">其他</option>');
        } else {
            $('#ACTION_RES').append('<option value="A">遺失</option>');
            $('#ACTION_RES').append('<option value="B">破損</option>');
            $('#ACTION_RES').append('<option value="E">其他</option>');
        }
    }
    function GetLicNumList() {
        var code_pcd = $('#DIVISION');

        var data = {
            'url': '/Ajax/GetLicNumCertList', 'msg': '查無該證書類別!!', 'arg': { 'code_pcd': code_pcd.val() }, 'result': $('#DIVISION')
        };

        if ($.trim(data.arg.code_pcd) == '')
            data.result.val('');
        else {
            code_pcd.val(data.arg.code_pcd);
            loadLicNumList(data, 'LIC_CD');
        }
    };

    function loadLicNumList(data, objectId) {
        ajaxLoadMore(data.url, data.arg, function (resp) {
            if (resp === undefined) {
                data.result.val('');
            }
            else {
                if (resp.data != '') {
                    $('#' + objectId).empty();
                    $.each(resp.data, function (i, item) {
                        $('#' + objectId).append('<option value=' + item.CODE + ' selected>' + item.TEXT + '</option>');
                    });
                }
                else {
                    data.result.val('');
                    blockAlert(data.msg);
                }
            }
        });
    };

    // 地址
    function loadDialogCITYCodeMapName(data) {
        ajaxLoadMore(data.url, data.arg, function (resp) {
            if (resp === undefined) data.box.val('');
            else {
                if (resp.data != '') data.box.val(resp.data);
                else { data.box.val(''); data.add.val(''); blockAlert(data.msg); }
            }
        });
    };

    function doCITYSelect() {
        var url = '/ZIP_CO';
        var title = '郵遞區號查詢'; popupWindow({ 'width': 900 }, url, title, null, function (retData, doc) {
            if (retData != null) {
                $('#CITY_CODE').val(retData.Id);
                $('#CITY_TEXT').val(retData.Name);
            }
        });
    }

    function doCITYNameGet() {
        var code = $('#CITY_CODE');
        var data = { 'url': '/Ajax/GetCityTown', 'msg': '查無該郵遞區號!!', 'arg': { 'CODE': code.val().toUpperCase() }, 'box': $('#CITY_TEXT'), 'add': $('#CITY_CODE') };
        if ($.trim(data.arg.CODE) == '') data.box.val('');
        else {
            code.val(data.arg.CODE);
            loadDialogCITYCodeMapName(data);
        }
    };

    function validation() {
        $('#DIVISION_TEXT').val($('#DIVISION option:selected').text());
        $('#LIC_CD_TEXT').val($('#LIC_CD option:selected').text());
        $('#LIC_TYPE').val($('#DIVISION option:selected').val());

        var msg = '';

        if ($('#APPLY_NAME').val().trim() == '') {
            msg += '請輸入申請人<br/>';
        }

        if ($('#APPLY_PID').val().trim() == '') {
            msg += '請輸入身分證編號/居留證號<br/>';
        }

        @*20210120 fix 因身分證/居留證號已改唯讀不提供編輯，暫時先拿掉先前寫的身分證格式檢核*@
        //if (!checkID($('#APPLY_PID').val())) {
        //    msg += '請輸入"正確"身分證編號/居留證號<br/>';
        //}

        if ($('#BIRTHDAY_AC').val().trim() == '') {
            msg += '請輸入出生年月日<br/>';
        }

        if ($('#ISSUE_DATE_AC').val().trim() == '') {
            msg += '請輸入核發日期<br/>';
        }

        if ($('#DIVISION option:selected').val().trim() == '') {
            msg += '請選擇科別<br/>';
        }

        if ($('#LIC_CD option:selected').val() == undefined || $('#LIC_CD option:selected').val().trim() == '') {
            msg += '請選擇證書<br/>';
        }

        if ($('#LIC_NUM').val().trim() == '') {
            msg += '請輸入證書字號<br/>';
        }

        if ($('#ACTION_RES option:selected').val().trim() == '') {
            msg += '請選擇補(換)發原因<br/>';
        }

        if ($('#OTHER_RES').val().trim() == '' && $('#ACTION_RES').val() == 'E') {
            msg += '請輸入補(換)發原因<br/>';
        }

        if ($('#CITY_CODE').val().trim() + $('#CITY_TEXT').val().trim() + $('#CITY_DETAIL').val().trim() == '') {
            msg += '請輸入通訊地址<br/>';
        }

        if ($('#TEL_SEC').val().trim() + $('#TEL_NO').val().trim() == '') {

            msg += '請輸入電話<br/>';
        }
        else
        {
            var telNo = $('#TEL_SEC').val().trim() + '-' + $('#TEL_NO').val().trim();
            var telNum = '#' + $('#TEL_EXT').val().trim();
            if (telNum != '#')
            { telNo = telNo + telNum; }
            if (!(telNo).match(/^(\d{2,4}-)(\d{6,8})?(#\d{1,6})?$/)) {
                msg += '電話輸入格式不正確<br/>';
            }
        }

        if ($('#Apply_MOBILE').val().trim() == '') {
            msg += '請輸入行動電話<br/>';
        }

        if ($('#MAIL_ACCOUNT').val().trim() == '' || $('#MAIL_DOMAIN').val().trim() == '') {
            msg += '請輸入完整E-MAIL<br/>';
        }

        //if ($('#ATTACH_FILE').val().trim() == '') {
        //    blockAlert('請上傳繳費紀錄照片或pdf檔案', '訊息');
        //    return false;
        //}

        if (msg != '') {
            blockAlert(msg, '訊息');
            return false;
        }

        return true;
    }

    function setFileName(objName) {
        //var validExts = new Array(".doc", ".docx", ".odt", ".odf", ".ods", ".xls", ".xlsx", ".pdf", ".ppt", ".pptx", ".jpg", ".bmp", ".png", ".gif", ".tif", ".zip");
        var validExts = new Array(".PDF", ".JPG", ".JPEG", ".BMP", ".PNG", ".GIF", ".TIF");

        var fileExt = $('input[name="' + objName + '"]').val();
        fileExt = fileExt.substring(fileExt.toLowerCase().lastIndexOf('.'));

        if ($('input[name="' + objName + '"]')[0].files[0].size / 1024 / 1024 > 5) {
            blockAlert("檔案大小不可超過5MB");
            $('input[name="' + objName + '"]').val(null);
            return false;
        }

        if (validExts.indexOf(fileExt.toUpperCase()) < 0) {
            blockAlert("檔案類型錯誤，可接受的副檔名有：" + validExts.toString());
            $('input[name="' + objName + '"]').val(null);
            return false;
        }
        else {
            $('#ATTACH_FILE_NAME').val($('input[name="' + objName + '"]').val().replace(/C:\\fakepath\\/i, ''));
            return true;
        }
    }

    function doSave() {
        if (validation()) {

            if ($('#ACTION_RES').is(':disabled')) {
                $('#ACTION_RES').removeProp('disabled')
            }

            if ($('#DIVISION').is(':disabled')) {
                $('#DIVISION').removeProp('disabled')
            }

            if ($('#LIC_CD').is(':disabled')) {
