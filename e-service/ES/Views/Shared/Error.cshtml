@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";

    //CustomHandleErrorAttribute
    string ErrLogMsg = null;
    string s_show = Convert.ToString(TempData["show"]);
    bool flag_show = false;
    if (!string.IsNullOrEmpty(s_show))
    {
        bool flag_t = Boolean.TryParse(s_show, out flag_show);
        if (flag_t && flag_show)
        {
            Layout = null;
            ErrLogMsg = TempData["ErrLogMsg"].ToString();//ViewBag.ErrLogMsg;
        }
    }
    if (Request.IsLocal)
    {
        Layout = null;
        ErrLogMsg = TempData["ErrLogMsg"].ToString();//ViewBag.ErrLogMsg;
    }
}

@if (string.IsNullOrEmpty(ErrLogMsg))
{
    <center>
