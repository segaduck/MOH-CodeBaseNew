                    <th >證書字號</th>
                    <th width="15%">核發日期</th>
                    <th width="15%">申請份數</th>
                    <th width="15%">開立證明格式</th>
                    @*<th width="10%">刪除</th>*@
                }
            </thead>
            <tbody>

