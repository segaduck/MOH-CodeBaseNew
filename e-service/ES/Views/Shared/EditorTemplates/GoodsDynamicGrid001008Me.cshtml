            $("#GoodsDynamicGird001008Me #goodsTable").removeAttr("style");

            $("#GoodsDynamicGird001008Me").height($("#GoodsDynamicGird001008Me").height() + 250)
            $("#GoodsDynamicGird001008Me #goodsTable").height($("#GoodsDynamicGird001008Me #goodsTable").height() + 250)
