@using ES.Models;
@using ES.Models.ViewModels;
@model ApplyDonateViewModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Detail", "ApplyDonate", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "main_form" }))
{
    <div class="container-fluid">
        <div class="col-sm-12">
            <!-- bread  -->
            <div class="breadlink"><i class="fas fa-home"></i><a href="@(Url.Action("Index", "Login"))">首頁</a> ／ <a href="#">線上捐款</a></div>
            <div class="clearfix"></div>
            <!--form-->
            <div id="form" class="index-note">
                @Html.HiddenFor(x => x.Detail.SRV_ID_DONATE)
                @Html.HiddenFor(x => x.Detail.START_DATE)
                @Html.HiddenFor(x => x.Detail.END_DATE)
                <h1 class="form-title  title-bg-y">賑災專戶說明</h1>
                <div class="form-set">
                    <div class="form-group">
                        <label class="step-label col-sm-2" for="">專戶名稱(中文)</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Detail.NAME_CH</p>
                            @*@Html.Raw(Model.Detail.NAME_CH)*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="step-label col-sm-2" for="">專戶名稱(英文)</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Detail.NAME_ENG</p>
                            @*@Html.Raw(Model.Detail.NAME_ENG)*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="step-label col-sm-2" for="">起訖日期</label>
                        <div class="col-sm-4">
                            <p class="form-control-static">@Model.Detail.START_DATE.Value.ToString("yyyy/MM/dd") ~ @Model.Detail.END_DATE.Value.ToString("yyyy/MM/dd") </p>
                            @*@Html.Raw(Model.Detail.START_DATE.Value.ToString("yyyy/MM/dd"))~@Html.Raw(Model.Detail.END_DATE.Value.ToString("yyyy/MM/dd"))*@
                        </div>
                        <label class="step-label col-sm-2" for="">捐款方式</label>
                        <div class="col-sm-4">
                            @if (!string.IsNullOrEmpty(Model.Detail.PAY_WAY))
                            {
                                if (Model.Detail.PAY_WAY.Contains("C"))
                                {
                                    <p class="form-control-static">信用卡線上捐款</p>
                                    @*@Html.Raw("信用卡線上捐款")<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>*@
                                }
                                if (Model.Detail.PAY_WAY.Contains("S"))
                                {
                                    <p class="form-control-static">超商條碼捐款</p>
                                    @*@Html.Raw("超商條碼捐款")<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>*@
                                }
                                if (Model.Detail.PAY_WAY.Contains("T"))
                                {
                                    <p class="form-control-static">銀行虛擬帳號劃撥</p>
                                    @*@Html.Raw("銀行虛擬帳號劃撥")<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>*@
                                }
                                if (Model.Detail.PAY_WAY.Contains("L"))
                                {
                                    <p class="form-control-static">LinePay</p>
                                    @*@Html.Raw("LinePay")<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>*@
                                }
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="step-label col-sm-2" for="">專戶說明(中文)</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Detail.DESC_CH</p>
                            @* @Html.Raw(Model.Detail.DESC_CH)*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="step-label col-sm-2" for="">專戶說明(英文)</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Detail.DESC_ENG</p>
                            @*@Html.Raw(Model.Detail.DESC_ENG)*@
                        </div>
                    </div>
                    <!--檔案上傳列表-->
                    @if (Model.Detail.FileList != null && Model.Detail.FileList.Count > 0)
                    {
                        @Html.Partial("_FileGrid")
                    }
                    <h2 class="second-title">「衛生福利部線上申辦系統」隱私權保護政策</h2>
                    <div>
                        <p class="form-control-static">
                            一、為辦理及管理各項捐款及各項救助業務，須蒐集、處理及使用捐款人個人資料，將妥善保管捐款人個人資料，不會作為捐款管理外之用途。
                        </p>
                        <p class="form-control-static">
                            二、本告知事項如有未盡事宜，依個人資料保護法及其他相關法規之規定辦理
                        </p>
                    </div>
                    <div class="btn-bar text-center">
                        <button type="submit" class="btn btn-save">您已了解並同意</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}
<script>

</script>
