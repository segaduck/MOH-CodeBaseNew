@model ES.Models.CertLoginModel
@{
    Layout = null;
}

<div class="dLeftLogin">
@using (Html.BeginForm("CertLogin", "Member", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { id = "CertLoginForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div style="height: 95px;">
        <div style="float: left; padding: 2px; width: 60px; text-align: right;">
            @Html.LabelFor(m => m.PinCode)
        </div>
        <div>
            @Html.PasswordFor(m => m.PinCode, new { style = "width: 100px;", id = "CertLoginPinCode", onKeyPress = "return certLogigKey(event);" })
        </div>
        <div>@Html.ValidationMessageFor(m => m.PinCode)</div>
        @Html.HiddenFor(m => m.CardInfo, new { id = "CertLoginCardInfo" })
        @Html.HiddenFor(m => m.CardType, new { id = "CertLoginCardType" })
        @Html.HiddenFor(m => m.UserId, new { id = "CertLoginUserId" })
        @Html.HiddenFor(m => m.UserName, new { id = "CertLoginUserName" })
         @Html.HiddenFor(m => m.pSignedData, new { id = "CertLoginpSignedData" })
        <iframe frameborder="0" width="100%" height="0" scrolling="no" id="uPkiFrame"></iframe>
    </div>
    <div style="float: right; padding-right: 10px;">
        <input type="button" value="登入" onclick="uPkiLogin();" id="CertLoginSubmit" />
    </div>
    @*
    <div style="width: 1px; height: 1px; overflow: hidden;"><input type="submit" value="登入" onclick="return false;" /></div>
    *@
}
</div>
